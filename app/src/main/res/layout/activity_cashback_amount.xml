<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/rl_commodity_black"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.7"
        android:background="@color/black"
        android:visibility="gone"></RelativeLayout>

    <View
        android:id="@+id/v_bar"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#FF3A1E" />

    <RelativeLayout
        android:id="@+id/rl_cashback_top"
        android:layout_width="match_parent"
        android:layout_height="271dp"
        android:layout_below="@+id/v_bar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="239dp"
            android:background="@drawable/bg_chashback_top"
            android:paddingBottom="25dp">
            <ImageView
                android:id="@+id/iv_cashback_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/white_back_top" />

            <RelativeLayout
                android:id="@+id/rl_cashback_middle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_cashback_back"
                android:layout_marginTop="25dp">

                <TextView
                    android:id="@+id/tv_cashback_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="返现金额"
                    android:textColor="#ffffffff"
                    android:textSize="14sp" />

                <RelativeLayout
                    android:id="@+id/rl_cashback_explain"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/tv_cashback_tip"
                    android:background="@drawable/bg_cashback_expalin"
                    android:paddingLeft="7dp"
                    android:paddingRight="7dp">

                    <ImageView
                        android:id="@+id/iv_cashback_explain"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_centerVertical="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/icon_information_small" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="2dp"
                        android:layout_toRightOf="@+id/iv_cashback_explain"
                        android:text="说明"
                        android:textColor="#ff333333"
                        android:textSize="9sp" />
                </RelativeLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/tv_cashback_waitin"
                    android:text="待入账"
                    android:textColor="#ffffffff"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_cashback_waitin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:text="¥0.00"
                    android:textColor="#ffffffff"
                    android:textSize="21sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_cashback_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_cashback_middle"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:text="¥0.00"
                android:textColor="#ffffffff"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/tv_reduction_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_cashback_amount"
                android:layout_marginLeft="15dp"
                android:textColor="#ffffffff"
                android:textSize="11sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_cashback_gouse"
            android:layout_width="335dp"
            android:layout_height="111dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="155dp"
            android:background="@drawable/icon_cashback_goshop"
            android:paddingTop="26dp"
            android:paddingBottom="26dp">

            <ImageView
                android:id="@+id/iv_cachback_right"
                android:layout_width="49dp"
                android:layout_height="49dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25.5dp"
                android:scaleType="fitXY"
                android:src="@drawable/icon_cashbackbg_left" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_cachback_right"
                android:text="去商城使用"
                android:layout_marginLeft="12dp"
                android:textColor="#ff002241"
                android:textSize="21sp"
                android:textStyle="bold" />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_cashback_top">

        <RelativeLayout
            android:id="@+id/rl_cashback_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp">

            <TextView
                android:id="@+id/tv_cashabck_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="明细"
                android:textColor="#ff333333"
                android:textSize="18sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/v_cashback_all"
                android:layout_width="19dp"
                android:layout_height="6dp"
                android:layout_below="@+id/tv_cashabck_all"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_red_round3" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_cashback_timeour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@+id/rl_cashback_all">

            <TextView
                android:id="@+id/tv_cashabck_tiemout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已过期"
                android:textColor="#ff666666"
                android:textSize="18sp"
                android:textStyle="normal" />

            <View
                android:id="@+id/v_cashback_timeout"
                android:layout_width="19dp"
                android:layout_height="6dp"
                android:layout_below="@+id/tv_cashabck_tiemout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_red_round3"
                android:visibility="invisible" />
        </RelativeLayout>

        <com.haotang.pet.pulltorefresh.PullToRefreshListView
            android:id="@+id/listView_cashback"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/rl_cashback_all"
            android:layout_marginBottom="0dp"
            android:divider="@null"
            android:scrollbars="none" />

        <RelativeLayout
            android:id="@+id/rl_cashback_null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_cashback_all"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_cashback_null"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="60dp"
                android:src="@drawable/icon_noproduction" />

            <TextView
                android:id="@+id/tv_cashback_null"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_cashback_null"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:text="您还没有返现记录"
                android:textColor="#ff717985"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_cashback_nulltwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_cashback_null"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="现在预约服务，赚取更多返现~"
                android:textColor="#ff717985"
                android:textSize="14sp" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_cashback_openqr"
            android:layout_width="76dp"
            android:layout_height="81dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="13dp"
            android:paddingLeft="3.5dp"
            android:paddingTop="2dp"
            android:paddingRight="3.5dp"
            android:paddingBottom="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/icon_cashback_openqr" />
    </RelativeLayout>

</RelativeLayout>