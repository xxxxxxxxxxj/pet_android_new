<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

    <include layout="@layout/titlebar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="50dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/layoutTopBeau"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginLeft="@dimen/margin_left"
                        android:layout_marginRight="@dimen/margin_right"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/beau_icon"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:adjustViewBounds="true"
                            android:background="@drawable/icon_default"
                            android:scaleType="fitXY"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="bottom"
                                android:orientation="horizontal"
                                android:paddingBottom="5dp">

                                <TextView
                                    android:id="@+id/beau_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="beau name"
                                    android:textSize="15sp"/>

                                <TextView
                                    android:id="@+id/beau_level"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:text="beau_level"
                                    android:textSize="12sp"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/imageview_beau_eva_one"
                                    android:layout_width="33dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/star_empty"/>

                                <ImageView
                                    android:id="@+id/imageview_beau_eva_two"
                                    android:layout_width="33dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/star_empty"/>

                                <ImageView
                                    android:id="@+id/imageview_beau_eva_thr"
                                    android:layout_width="33dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/star_empty"/>

                                <ImageView
                                    android:id="@+id/imageview_beau_eva_four"
                                    android:layout_width="33dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/star_empty"/>

                                <ImageView
                                    android:id="@+id/imageview_beau_eva_five"
                                    android:layout_width="33dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/star_empty"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <com.haotang.pet.view.FluidLayout
                        android:id="@+id/fluid_beau_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_left"
                        android:layout_marginRight="@dimen/margin_right"
                        android:layout_marginTop="10dp"
                        android:background="@color/f8f8ff8"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/editText_evalute_write_by_user"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp"
                            android:background="@color/f8f8ff8"
                            android:ems="10"
                            android:gravity="top"
                            android:hint="服务是否满意，给美容师一个好评吧！"
                            android:maxLength="500"
                            android:paddingBottom="3dip"
                            android:paddingLeft="8dip"
                            android:paddingRight="8dip"
                            android:paddingTop="3dip"
                            android:textColor="@color/a222222"
                            android:textColorHint="@color/acccccc"
                            android:textSize="14sp">

                            <requestFocus/>
                        </EditText>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/f8f8ff8"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <GridView
                                android:id="@+id/gridView_get_dog_phone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/f8f8ff8"
                                android:listSelector="@color/transparent"
                                android:numColumns="4"
                                android:scrollbars="none"
                                android:visibility="visible">
                            </GridView>
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/af8f8f8"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutBottomShop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_left"
                    android:layout_marginRight="@dimen/margin_right"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/shop_icon"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:adjustViewBounds="true"
                            android:background="@drawable/icon_default"
                            android:scaleType="fitXY"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/shop_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="shop name"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/imageview_shop_eva_one"
                                    android:layout_width="33dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/star_empty"/>

                                <ImageView
                                    android:id="@+id/imageview_shop_eva_two"
                                    android:layout_width="33dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/star_empty"/>

                                <ImageView
                                    android:id="@+id/imageview_shop_eva_thr"
                                    android:layout_width="33dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/star_empty"/>

                                <ImageView
                                    android:id="@+id/imageview_shop_eva_four"
                                    android:layout_width="33dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/star_empty"/>

                                <ImageView
                                    android:id="@+id/imageview_shop_eva_five"
                                    android:layout_width="33dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/star_empty"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <com.haotang.pet.view.FluidLayout
                        android:id="@+id/fluid_shop_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/af8f8f8"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/editText_shop_write_by_user"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp"
                            android:background="@color/af8f8f8"
                            android:ems="10"
                            android:gravity="top"
                            android:hint="服务是否满意，给店铺一个好评吧！"
                            android:maxLength="500"
                            android:paddingBottom="3dip"
                            android:paddingLeft="8dip"
                            android:paddingRight="8dip"
                            android:paddingTop="3dip"
                            android:textColor="@color/a222222"
                            android:textColorHint="@color/acccccc"
                            android:textSize="14sp">

                            <requestFocus/>
                        </EditText>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/af8f8f8"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <GridView
                                android:id="@+id/gridView_get_dog_phone_shop"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/af8f8f8"
                                android:listSelector="@color/transparent"
                                android:numColumns="4"
                                android:scrollbars="none"
                                android:visibility="visible">
                            </GridView>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_is_anonymous"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/is_anonymous"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/icon_pay_normal"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="匿名提交"
                        android:textColor="@color/a666666"/>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bg_jianbian_mypet_add"
            android:gravity="center">

            <Button
                android:id="@+id/post_to_service_eva"
                android:layout_width="290dip"
                android:layout_height="54dip"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_red_jianbian_icon"
                android:text="提交"
                android:textColor="@color/white"
                android:textSize="18sp"/>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>