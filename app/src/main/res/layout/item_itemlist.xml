<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_item_itemlist_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dip"
    android:layout_marginRight="5dip"
    android:background="@drawable/main_local_bg_shade"
    android:padding="15dip">

    <TextView
        android:id="@+id/tv_item_itemlist_sub"
        android:layout_width="60dip"
        android:layout_height="40dip"
        android:background="@drawable/bg_shop_shade"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:text="添加"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <LinearLayout
        android:id="@+id/ll_item_itemlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dip"
        android:layout_toLeftOf="@id/tv_item_itemlist_sub"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="75dip"
            android:layout_height="70dip"
            android:layout_marginRight="5dip">

            <TextView
                android:id="@+id/tv_item_itemlist_tag"
                android:layout_width="wrap_content"
                android:layout_height="15.5dip"
                android:layout_alignParentRight="true"
                android:background="@drawable/bg_red_round1"
                android:ellipsize="end"
                android:gravity="center"
                android:paddingLeft="5dip"
                android:paddingRight="5dip"
                android:singleLine="true"
                android:text="TextView"
                android:textColor="@color/white"
                android:textSize="9sp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_item_itemlist_img"
                android:layout_width="70dip"
                android:layout_height="70dip"
                android:scaleType="fitXY"
                android:src="@drawable/icon_production_default" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dip">

                <TextView
                    android:id="@+id/tv_item_itemlist_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textStyle="bold"
                    android:text="TextView"
                    android:textColor="@color/a333333"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dip"
                    android:layout_toLeftOf="@id/tv_item_itemlist_price"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_item_itemlist_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dip"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="TextView"
                        android:textColor="@color/a333333"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_item_itemlist_vipprice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="TextView"
                        android:textColor="@color/aD0021B"
                        android:textSize="10sp" />
                </LinearLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_item_itemlist_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="@color/a999999"
                android:textSize="11sp" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>