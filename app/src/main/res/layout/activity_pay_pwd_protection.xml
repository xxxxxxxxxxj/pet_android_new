<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/af8f8f8"
    android:orientation="vertical">

    <include layout="@layout/titlebar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="55dip"
                android:layout_height="60dip"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="30dip"
                android:layout_marginTop="51dip"
                android:scaleType="fitXY"
                android:src="@drawable/icon_dunpai" />

            <TextView
                android:id="@+id/tv_paypwdprotection_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dip"
                android:paddingLeft="15dip"
                android:paddingRight="15dip"
                android:text="您可以输入亲友手机号为备用手机号，当找回密码时可用于安全问答验证身份"
                android:textColor="@color/a333333"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/et_paypwdprotection_onephone"
                android:layout_width="match_parent"
                android:layout_height="48dip"
                android:layout_marginBottom="15dip"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/bg_white_borderbbbbbb"
                android:hint="请输入您的备用手机号"
                android:maxLength="13"
                android:numeric="integer|signed"
                android:paddingLeft="15dip"
                android:textColor="@color/a666666"
                android:textColorHint="@color/a999999"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_paypwdprotection_onephoneerror"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dip"
                android:layout_marginLeft="30dip"
                android:layout_marginRight="30dip"
                android:text="请输入正确的手机号"
                android:textColor="@color/aD0021B"
                android:textSize="12sp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/et_paypwdprotection_twophone"
                android:layout_width="match_parent"
                android:layout_height="48dip"
                android:layout_marginBottom="15dip"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/bg_white_borderbbbbbb"
                android:hint="为了您的账户安全，请再次输入您的备用手机号"
                android:maxLength="13"
                android:numeric="integer|signed"
                android:paddingLeft="15dip"
                android:textColor="@color/a666666"
                android:textColorHint="@color/a999999"
                android:textSize="14sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_paypwdprotection_twophoneerror"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dip"
                android:layout_marginLeft="30dip"
                android:layout_marginRight="30dip"
                android:text="备用手机号不一致"
                android:textColor="@color/aD0021B"
                android:textSize="12sp"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_paypwdprotection"
                android:layout_width="match_parent"
                android:layout_height="44dip"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="15dip"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:background="@drawable/bg_button_orange"
                android:text="提 交"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_paypwdprotection_mibaotishi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dip"
                android:paddingRight="15dip"
                android:text="如无法自助修改，请联系客服协助"
                android:textColor="@color/a999999"
                android:textSize="12sp"
                android:visibility="gone" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
