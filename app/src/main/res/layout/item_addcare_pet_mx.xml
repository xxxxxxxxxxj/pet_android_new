<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dip"
    android:orientation="horizontal">

    <com.haotang.pet.view.NiceImageView
        android:id="@+id/iv_item_addcarepetmx_petimg"
        android:layout_width="44dip"
        android:layout_height="44dip"
        android:layout_marginRight="12dip"
        android:scaleType="fitXY"
        android:src="@drawable/icon_production_default"
        app:corner_radius="25dip" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4.5dip"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_item_addcarepetmx_petname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="18dip"
                android:text="TextView"
                android:textColor="@color/a333333"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_item_addcarepetmx_petzj"
                android:layout_width="60dip"
                android:layout_height="19dip"
                android:background="@drawable/bg_1f2_round"
                android:gravity="center"
                android:text="追加宠物"
                android:textColor="@color/aff3a1e"
                android:textSize="11sp" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_item_addcarepetmx_jcfwf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dip">

            <TextView
                android:id="@+id/tv_item_addcarepetmx_jcfwf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="26dip"
                android:layout_centerVertical="true"
                android:text="TextView"
                android:textColor="@color/a333333"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dip"
                android:layout_toLeftOf="@id/tv_item_addcarepetmx_jcfwf"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_item_addcarepetmx_jcfwftitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dip"
                    android:text="TextView"
                    android:textColor="@color/a666666"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_item_addcarepetmx_jcfwfdj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textColor="@color/a666666"
                    android:textSize="12sp" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_item_addcarepetmx_yj"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dip">

            <TextView
                android:id="@+id/tv_item_addcarepetmx_yjfwf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="26dip"
                android:layout_centerVertical="true"
                android:text="TextView"
                android:textColor="@color/a333333"
                android:textSize="12sp" />

            <LinearLayout
                android:id="@+id/ll_item_addcarepetmx_yjfwf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dip"
                android:layout_toLeftOf="@id/tv_item_addcarepetmx_yjfwf"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_item_addcarepetmx_yjtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dip"
                    android:text="TextView"
                    android:textColor="@color/a666666"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_item_addcarepetmx_yjfwfdj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textColor="@color/a666666"
                    android:textSize="12sp" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_item_addcarepetmx_ldfw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dip"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dip"
                android:text="添加护理项目："
                android:textColor="@color/a666666"
                android:textSize="12sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/ll_item_addcarepetmx_ldfwf_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_item_addcarepetmx_ldfwf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dip"
                        android:text="TextView"
                        android:textColor="@color/a333333"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/iv_addcarepetmx_delete"
                        android:layout_width="16dip"
                        android:layout_height="16dip"
                        android:scaleType="fitXY"
                        android:src="@drawable/icon_close_petmx" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_item_addcarepetmx_ldtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dip"
                    android:layout_toLeftOf="@id/ll_item_addcarepetmx_ldfwf_right"
                    android:text="TextView"
                    android:textColor="@color/a666666"
                    android:textSize="12sp" />
            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/aEEEEEE" />
    </LinearLayout>
</LinearLayout>