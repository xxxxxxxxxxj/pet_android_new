<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/main_local_bg_shade">

    <ImageView
        android:id="@+id/iv_item_workerlist_list_tag"
        android:layout_width="43dip"
        android:layout_height="43dip"
        android:layout_marginLeft="5.5dip"
        android:layout_marginTop="6.5dip"
        android:scaleType="fitXY" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="15dip"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_item_workerlist_list_img"
                android:layout_width="65dip"
                android:layout_height="65dip"
                android:layout_marginBottom="5dip"
                android:scaleType="fitXY"
                android:src="@drawable/user_icon_unnet_circle" />

            <TextView
                android:id="@+id/tv_item_workerlist_list_workername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dip"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="TextView"
                android:textColor="@color/a333333"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_item_workerlist_list_sub"
                android:layout_width="72dip"
                android:layout_height="40dip"
                android:background="@drawable/bg_worker_shade_red"
                android:gravity="center"
                android:text="TextView"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_item_workerlist_list_zztime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="@color/a666666"
                android:textSize="10sp" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>