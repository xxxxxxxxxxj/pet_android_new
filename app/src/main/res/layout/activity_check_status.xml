<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/af7f7f7"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_checkstatus_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="40dip"
        android:paddingBottom="40dip">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip"
            android:text="手机号已停用，请联系我们"
            android:textColor="@color/a666666"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_checkstatus_kfphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip"
            android:text="400 030 0011"
            android:textColor="@color/a333333"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/ll_checkstatus_bottom"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ib_checkstatus_back"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dip"
            android:layout_marginTop="15dip"
            android:layout_marginBottom="60dip"
            android:src="@drawable/btn_back_black_servicenew" />

        <TextView
            android:id="@+id/tv_checkstatus_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:layout_marginBottom="15dip"
            android:text="请校验手机号码"
            android:textStyle="bold"
            android:textColor="@color/a333333"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tv_checkstatus_miaoshu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:layout_marginBottom="50dip"
            android:text="保证您的账户安全，请核验与宠物家账号绑定的手机号码"
            android:textColor="@color/a999999"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:layout_marginBottom="10dip"
            android:text="已绑定手机号"
            android:textColor="@color/a333333"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_checkstatus_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:layout_marginBottom="25dip"
            android:text="+86"
            android:textColor="@color/a333333"
            android:textSize="18sp" />

        <com.haotang.pet.view.ShadowLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/sl_checkstatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:background="@color/white"
            app:hl_cornerRadius="16dp"
            app:hl_dx="0dp"
            app:hl_dy="0dp"
            app:hl_shadowColor="@color/default_shadow_color"
            app:hl_shadowLimit="15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="44dip"
                android:background="@drawable/bg_ff3a1e_round"
                android:gravity="center"
                android:text="发送验证码"
                android:textColor="@color/white"
                android:textSize="16sp">

            </TextView>
        </com.haotang.pet.view.ShadowLayout>
    </LinearLayout>
</RelativeLayout>
