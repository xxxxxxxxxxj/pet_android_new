<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_white_topround_25"
        android:layout_alignParentBottom="true"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置支付密码"
            android:textColor="#ff333333"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:layout_marginLeft="15.5dp"
            android:textSize="18sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="为了保护您的账户安全"
            android:textColor="#ff717985"
            android:textSize="14sp"
            android:layout_marginTop="26dp"
            android:layout_marginLeft="15.5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选用E卡或余额卡支付时请先设置支付密码"
            android:textColor="#ff717985"
            android:textSize="14sp"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="15.5dp"
            />
        <Button
            android:id="@+id/btn_go_setpwd"
            android:layout_width="match_parent"
            android:layout_height="70.5dip"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="100dip"
            android:layout_marginRight="30dp"
            android:background="@drawable/bg_common_redbtn"
            android:gravity="center"
            android:paddingBottom="20dp"
            android:text="设置支付密码"
            android:textColor="@color/white"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/tv_setpwd_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:layout_gravity="center_horizontal"
            android:textColor="#ffa3a3a3"
            android:textSize="16sp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="65dp"
            />
    </LinearLayout>
</RelativeLayout>