<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="30dip">

    <RelativeLayout
        android:id="@+id/rl_addcare_beauty_img"
        android:layout_width="94dip"
        android:layout_height="94dip"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/iv_addcare_beauty"
            android:layout_width="94dp"
            android:layout_height="94dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/icon_addcareitem_beauty" />

        <ImageView
            android:id="@+id/iv_addcare_beautyno"
            android:layout_width="94dp"
            android:layout_height="94dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/icon_addcareitem_beautyno" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_item_addcarebeauty_select"
        android:layout_width="28dip"
        android:layout_height="28dip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/icon_petadd_unselect" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_toLeftOf="@id/iv_item_addcarebeauty_select"
        android:layout_toRightOf="@id/rl_addcare_beauty_img"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_addccare_beautyname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@color/a333333"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_addcare_beautyeprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@color/aff3a1e"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_addcare_beautyno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@color/aff3a1e"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_addcare_beautyprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@color/a333333"
            android:textSize="20sp" />
    </LinearLayout>
</RelativeLayout>