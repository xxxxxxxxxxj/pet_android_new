<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ib_setperm_back"
        android:layout_width="30dip"
        android:layout_height="30dip"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dip"
        android:layout_marginTop="15dip"
        android:layout_marginBottom="42dip"
        android:src="@drawable/btn_back_black_servicenew" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="12.5dip"
        android:text="系统权限设置"
        android:textColor="@color/a002241"
        android:textStyle="bold"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_marginBottom="23dip"
        android:text="为更好的用户体验，宠物家特定场景需要向您申请以下系统权限，您可以在手机系统设置页面进行相应调整"
        android:textColor="@color/a36425b"
        android:textSize="14sp" />

    <TextView
        android:layout_width="84dp"
        android:layout_height="20dp"
        android:layout_marginLeft="20dip"
        android:layout_marginBottom="20dip"
        android:text="设置以下功能"
        android:textColor="@color/a9fa7b9"
        android:textSize="14sp" />

    <RelativeLayout
        android:id="@+id/rl_setperm_push"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14.5dip"
        android:paddingLeft="20dip"
        android:paddingRight="20dip">

        <LinearLayout
            android:id="@+id/ll_setperm_push_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical|right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_setperm_push_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dip"
                android:text="去设置"
                android:textColor="@color/a080808"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="7dip"
                android:layout_height="11.5dip"
                android:scaleType="fitXY"
                android:src="@drawable/icon_right_more" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:layout_toLeftOf="@id/ll_setperm_push_right"
            android:gravity="center_vertical|left"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="允许宠物家Push通知"
                android:textColor="@color/a080808"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="向您发送订单提醒与优惠信息"
                android:textColor="@color/a9fa7b9"
                android:textSize="12sp" />

        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:layout_marginLeft="20dip"
        android:layout_marginBottom="14.5dip"
        android:background="@color/aEEEEEE" />

    <RelativeLayout
        android:id="@+id/rl_setperm_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14.5dip"
        android:paddingLeft="20dip"
        android:paddingRight="20dip">

        <LinearLayout
            android:id="@+id/ll_setperm_location_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical|right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_setperm_location_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dip"
                android:text="去设置"
                android:textColor="@color/a080808"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="7dip"
                android:layout_height="11.5dip"
                android:scaleType="fitXY"
                android:src="@drawable/icon_right_more" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:layout_toLeftOf="@id/ll_setperm_location_right"
            android:gravity="center_vertical|left"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="允许宠物家访问位置信息"
                android:textColor="@color/a080808"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="推荐门店与宠物接送我们要获取您的位置"
                android:textColor="@color/a9fa7b9"
                android:textSize="12sp" />

        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:layout_marginLeft="20dip"
        android:layout_marginBottom="14.5dip"
        android:background="@color/aEEEEEE" />

    <RelativeLayout
        android:id="@+id/rl_setperm_camera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14.5dip"
        android:paddingLeft="20dip"
        android:paddingRight="20dip">

        <LinearLayout
            android:id="@+id/ll_setperm_camera_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical|right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_setperm_camera_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dip"
                android:text="去设置"
                android:textColor="@color/a080808"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="7dip"
                android:layout_height="11.5dip"
                android:scaleType="fitXY"
                android:src="@drawable/icon_right_more" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:layout_toLeftOf="@id/ll_setperm_camera_right"
            android:gravity="center_vertical|left"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="允许宠物家访问相机"
                android:textColor="@color/a080808"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="方便您发帖与评论等功能"
                android:textColor="@color/a9fa7b9"
                android:textSize="12sp" />

        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:layout_marginLeft="20dip"
        android:layout_marginBottom="14.5dip"
        android:background="@color/aEEEEEE" />

    <RelativeLayout
        android:id="@+id/rl_setperm_album"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14.5dip"
        android:paddingLeft="20dip"
        android:paddingRight="20dip">

        <LinearLayout
            android:id="@+id/ll_setperm_album_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical|right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_setperm_album_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dip"
                android:text="去设置"
                android:textColor="@color/a080808"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="7dip"
                android:layout_height="11.5dip"
                android:scaleType="fitXY"
                android:src="@drawable/icon_right_more" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:layout_toLeftOf="@id/ll_setperm_album_right"
            android:gravity="center_vertical|left"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="允许宠物家访问相册"
                android:textColor="@color/a080808"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="方便您发帖与评论等功能"
                android:textColor="@color/a9fa7b9"
                android:textSize="12sp" />

        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:layout_marginLeft="20dip"
        android:layout_marginBottom="14.5dip"
        android:background="@color/aEEEEEE" />

    <RelativeLayout
        android:id="@+id/rl_setperm_book"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14.5dip"
        android:paddingLeft="20dip"
        android:paddingRight="20dip">

        <LinearLayout
            android:id="@+id/ll_setperm_book_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical|right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_setperm_book_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dip"
                android:text="去设置"
                android:textColor="@color/a080808"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="7dip"
                android:layout_height="11.5dip"
                android:scaleType="fitXY"
                android:src="@drawable/icon_right_more" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:layout_toLeftOf="@id/ll_setperm_book_right"
            android:gravity="center_vertical|left"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="允许宠物家访问通讯录"
                android:textColor="@color/a080808"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="方便在下单时更加便利的获取您的联系人信息"
                android:textColor="@color/a9fa7b9"
                android:textSize="12sp" />

        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:layout_marginLeft="20dip"
        android:layout_marginBottom="14.5dip"
        android:background="@color/aEEEEEE" />
</LinearLayout>
