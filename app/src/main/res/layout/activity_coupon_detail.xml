<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_commodity_black"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.7"
        android:background="@color/black"
        android:visibility="gone" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F0F5F9"
        android:orientation="vertical"
        tools:context=".CouponDetailActivity">

        <include layout="@layout/titlebar" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="108dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/bg_white_bottomround_20"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rl_coupon_chooseone"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingRight="15dp">

                    <TextView
                        android:id="@+id/tv_coupon_useshoptip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:text="适用门店"
                        android:textColor="#ff4d4d4d"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_coupon_useshop"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/iv_coupon_shopmore"
                        android:layout_toRightOf="@+id/tv_coupon_useshoptip"
                        android:gravity="right"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_marginLeft="8dp"
                        android:textColor="#ff666666"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/iv_coupon_shopmore"
                        android:layout_width="8dp"
                        android:layout_height="13dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/icon_right_more"
                        android:visibility="invisible" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="#EEEEEE" />

                <RelativeLayout
                    android:id="@+id/rl_coupon_choosetwo"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:paddingRight="15dp">

                    <TextView
                        android:id="@+id/tv_coupon_changeone_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:text="适用美容师"
                        android:textColor="#ff4d4d4d"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_coupon_changeone_right"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/iv_coupon_beautymore"
                        android:layout_toRightOf="@+id/tv_coupon_changeone_left"
                        android:gravity="right"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_marginLeft="8dp"
                        android:textColor="#ff666666"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/iv_coupon_beautymore"
                        android:layout_width="8dp"
                        android:layout_height="13dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/icon_right_more"
                        android:visibility="invisible" />
                </RelativeLayout>

                <View
                    android:id="@+id/v_line"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="#EEEEEE" />

                <RelativeLayout
                    android:id="@+id/rl_coupon_choosethree"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:paddingRight="15dp">

                    <TextView
                        android:id="@+id/tv_coupon_changetwo_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:text="适用服务"
                        android:textColor="#ff4d4d4d"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_coupon_changetwo_right"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/iv_coupon_servicemore"
                        android:layout_toRightOf="@+id/tv_coupon_changetwo_left"
                        android:gravity="right"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_marginLeft="8dp"
                        android:textColor="#ff666666"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/iv_coupon_servicemore"
                        android:layout_width="8dp"
                        android:layout_height="13dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/icon_right_more"
                        android:visibility="invisible" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="#EEEEEE" />

                <RelativeLayout
                    android:id="@+id/rl_coupon_choosefour"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:paddingRight="15dp">

                    <TextView
                        android:id="@+id/tv_coupon_changethree_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:text="适用宠物"
                        android:textColor="#ff4d4d4d"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_coupon_changethree_right"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/iv_coupon_petemore"
                        android:layout_toRightOf="@+id/tv_coupon_changethree_left"
                        android:gravity="right"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_marginLeft="8dp"
                        android:textColor="#ff666666"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/iv_coupon_petemore"
                        android:layout_width="8dp"
                        android:layout_height="13dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/icon_right_more"
                        android:visibility="invisible" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="#EEEEEE" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:paddingRight="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:text="是否与E卡同时使用"
                        android:textColor="#ff4d4d4d"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_coupon_usewithcard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="8dp"
                        android:textColor="#ff666666"
                        android:textSize="14sp" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="#EEEEEE" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:text="优惠券说明"
                        android:textColor="#ff4d4d4d"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_coupon_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="30dp"
                        android:textColor="#ff666666"
                        android:textSize="11sp" />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_coupondetail_top"
                android:paddingLeft="19.25dp"
                android:paddingTop="17dp"
                android:paddingRight="19.3dp"
                android:paddingBottom="25dp">

                <RelativeLayout
                    android:id="@+id/rl_coupon_reduce"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="21.5dp"
                    android:layout_marginRight="35dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tv_coupon_rmb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/tv_coupon_reduce"
                        android:text="¥ "
                        android:textColor="#FE7567"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_coupon_reduce"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/tv_coupon_rmb"
                        android:text="5"
                        android:textColor="#FE7567"
                        android:textSize="30sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_coupon_free"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="21.5dp"
                    android:layout_marginRight="35dp"
                    android:textColor="#FE7567"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_coupon_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:textColor="#ff333333"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_coupon_end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_coupon_name"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="21dp"
                    android:textColor="#ff666666"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_coupon_willend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_coupon_name"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="13dp"
                    android:layout_toRightOf="@+id/tv_coupon_end"
                    android:background="@drawable/bg_coupon_endborder"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingTop="3dp"
                    android:paddingRight="@dimen/dp_10"
                    android:paddingBottom="3dp"
                    android:text="即将过期"
                    android:textColor="#ffdf3930"
                    android:textSize="9sp"
                    android:visibility="gone" />


                <ImageView
                    android:id="@+id/iv_coupon_type"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:src="@drawable/icon_coupon_goods" />
            </RelativeLayout>
        </RelativeLayout>


    </LinearLayout>

    <ImageView
        android:id="@+id/iv_usecoupon_buy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:src="@drawable/icon_usecoupon_buy_big"
        android:visibility="gone" />
</RelativeLayout>
