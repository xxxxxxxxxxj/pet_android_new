<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ll_item_washorderdetail_pet_root"
    android:orientation="vertical"
    android:paddingBottom="10dip"
    android:paddingTop="10dip">

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@drawable/bg_back_top_yinying" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_back_middle_yinying"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip">

            <TextView
                android:id="@+id/tv_item_washorderdetail_pet_totalprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dip"
                android:layout_toLeftOf="@id/tv_item_washorderdetail_pet_totalprice"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_item_washorderdetail_pet_serviceloc"
                    android:layout_width="40dip"
                    android:layout_height="18dip"
                    android:layout_marginRight="10dip"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_item_washorderdetail_pet_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:layout_marginBottom="10dip"
            android:background="@color/aEEEEEE" />

        <LinearLayout
            android:id="@+id/ll_item_washorderdetail_pet_jcfw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dip"
                android:text="基础服务"
                android:textColor="@color/aBB996C"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_item_washorderdetail_pet_jcfw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/a666666"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_item_washorderdetail_pet_dxfw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dip"
                android:text="单项服务"
                android:textColor="@color/aBB996C"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_item_washorderdetail_pet_dxfw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/a666666"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_item_washorderdetail_pet_zjdx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dip"
                android:text="追加单项"
                android:textColor="@color/aBB996C"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_item_washorderdetail_pet_zjdx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/a666666"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@drawable/bg_back_bottom_yinying" />
</LinearLayout>