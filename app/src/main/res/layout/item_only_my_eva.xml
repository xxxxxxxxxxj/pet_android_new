        <LinearLayout
            android:id="@+id/relayout_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_one"
                    android:layout_width="19.5dp"
                    android:layout_height="19.5dp"
                    android:layout_marginRight="0.5dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/star_empty"
                    android:scaleType="fitXY" />

                <ImageView
                    android:id="@+id/img_two"
                    android:layout_width="19.5dp"
                    android:layout_height="19.5dp"
                    android:layout_marginRight="0.5dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/star_empty"
                    android:scaleType="fitXY" />

                <ImageView
                    android:id="@+id/img_thr"
                    android:layout_width="19.5dp"
                    android:layout_height="19.5dp"
                    android:layout_marginLeft="0.5dp"
                    android:background="@drawable/star_empty" />

                <ImageView
                    android:id="@+id/img_four"
                    android:layout_width="19.5dp"
                    android:layout_height="19.5dp"
                    android:layout_marginRight="0.5dp"
                    android:background="@drawable/star_empty" />

                <ImageView
                    android:id="@+id/img_five"
                    android:layout_width="19.5dp"
                    android:layout_height="19.5dp"
                    android:background="@drawable/star_empty" />
            </LinearLayout>
            <!--<RatingBar
                android:id="@+id/ratingBar_major_grade"
                style="@style/myCustomizeRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:isIndicator="true"
                android:numStars="5"
                android:stepSize="1"
				android:visibility="gone"/>-->
            <TextView
                android:id="@+id/textview_eva_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text=" "
                android:textColor="@color/aD1494F"
                android:textSize="12sp" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:background="@color/af8f8f8" />

    <TextView
        android:id="@+id/textView_eva_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text=" "
        android:textColor="@color/a666666"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textView_eva_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:text=" "
        android:textColor="@color/a999999"
        android:textSize="10sp" />

    <LinearLayout
        android:id="@+id/ll_beauticiancommetslist_item_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_beauticiancommentslist_item_image1"
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:background="@drawable/icon_production_default"
            android:scaleType="centerCrop"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/iv_beauticiancommentslist_item_image2"
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:layout_marginLeft="6dip"
            android:background="@drawable/icon_production_default"
            android:scaleType="centerCrop"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_beauticiancommentslist_item_image3"
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:layout_marginLeft="6dip"
            android:background="@drawable/icon_production_default"
            android:scaleType="centerCrop"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_layout_reply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp">

        <ImageView
            android:layout_width="10dp"
            android:layout_height="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="-1dp"

            android:src="@drawable/eva_reply" />
        <!-- android:layout_marginTop="10dp" -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/aDDDDDD"
            android:orientation="vertical">

            <TextView
                android:id="@+id/TextView_waiter_Reply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text=" "
                android:textColor="@color/a555555"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textview_waiter_reply_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:text=" "
                android:textColor="@color/a757575"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginTop="5dp"
        android:background="@color/white" />
</LinearLayout>