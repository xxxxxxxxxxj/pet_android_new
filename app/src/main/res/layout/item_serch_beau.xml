<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="10dip"
    android:id="@+id/rl_item_serchbeau_root">

    <com.haotang.pet.view.ShadowLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dip"
        android:background="@color/white"
        app:hl_cornerRadius="20dp"
        app:hl_dx="0dp"
        app:hl_dy="0dp"
        app:hl_shadowColor="@color/default_shadow_color"
        app:hl_shadowLimit="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="40dip"
            android:paddingRight="10dip">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dip"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/tv_item_serchbeau_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dip"
                    android:text="TextView"
                    android:lines="1"
                    android:layout_toLeftOf="@+id/iv_item_serchbeau_sex"
                    android:textColor="@color/a384359"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/iv_item_serchbeau_sex"
                    android:layout_width="14dip"
                    android:layout_height="14dip"
                    android:layout_alignParentRight="true"
                    android:adjustViewBounds="true"
                    android:layout_centerVertical="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/icon_serchbeau_nan" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_item_serchbeau_time"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="5dip"
                android:paddingLeft="10dip"
                tools:text="最早可约 16:20"
                android:lines="1"
                android:textColor="@color/a717985"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/iv_item_serchbeau_yy"
                android:layout_width="80dip"
                android:layout_height="33dip"
                android:adjustViewBounds="true"
                android:layout_marginLeft="5dip"
                android:layout_marginBottom="15dip"
                android:scaleType="fitXY"
                android:src="@drawable/icon_serchbeau_yy" />
        </LinearLayout>
    </com.haotang.pet.view.ShadowLayout>

    <RelativeLayout
        android:layout_width="60dip"
        android:layout_height="70dip"
        android:layout_marginLeft="20dip">

        <com.haotang.pet.view.NiceImageView
            android:id="@+id/iv_item_serchbeau_img"
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/icon_production_default"
            app:corner_radius="22dip" />

        <ImageView
            android:id="@+id/iv_item_serchbeau_jb"
            android:layout_width="43.5dip"
            android:layout_height="15dip"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/icon_serchbeau_level1" />
    </RelativeLayout>
</RelativeLayout>