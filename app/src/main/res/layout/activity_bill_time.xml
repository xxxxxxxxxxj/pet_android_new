<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/titlebar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dip"
        android:layout_marginTop="85dip"
        android:orientation="horizontal"
        android:paddingLeft="10dip"
        android:paddingRight="10dip">

        <LinearLayout
            android:id="@+id/ll_billtime_starttime"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_billtime_starttime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:text="开始时间"
                android:textColor="@color/aBBBBBB"
                android:textSize="15sp" />

            <View
                android:id="@+id/vw_billtime_starttime"
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:background="@color/aBBBBBB" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:text="至"
            android:textColor="@color/a666666"
            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/ll_billtime_endtime"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_billtime_endtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:text="结束时间"
                android:textColor="@color/aBBBBBB"
                android:textSize="15sp" />

            <View
                android:id="@+id/vw_billtime_endtime"
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:background="@color/aBBBBBB" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_billtime_clear"
        android:layout_width="20dip"
        android:layout_height="18.5dip"
        android:layout_gravity="right"
        android:layout_marginBottom="20dip"
        android:layout_marginRight="10dip"
        android:scaleType="fitXY"
        android:src="@drawable/icon_billtime_clear" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dip"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <com.contrarywind.view.WheelView
            android:id="@+id/wv_billtime_year"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:paddingLeft="20dip" />

        <com.contrarywind.view.WheelView
            android:id="@+id/wv_billtime_month"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:paddingRight="20dip" />
    </LinearLayout>
</LinearLayout>
