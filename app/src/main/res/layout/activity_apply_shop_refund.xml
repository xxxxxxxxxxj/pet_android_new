<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <RelativeLayout
        android:id="@+id/rl_commodity_black"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.7"
        android:background="@color/black"
        android:visibility="gone"/>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".ApplyShopRefundActivity">
        <include layout="@layout/titlebar"/>
        <TextView
            android:id="@+id/tv_refund_toptip"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:background="#FFFFF2E2"
            android:text="目前系统只支持整单退货，若您要退单价商品请联系客服~"
            android:gravity="center"
            android:textSize="11sp"
            />
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="15dp"
                        android:background="#f8f8f8"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:id="@+id/tv_shop_refundnum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="退货商品  共1件"
                            android:textColor="#ff333333"
                            android:layout_marginLeft="15dp"
                            android:textSize="14sp"
                            android:layout_gravity="center_vertical"
                            />
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#eeeeee"
                        />
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_shop_refundlist"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="15dp"
                        android:background="#f8f8f8"/>
                    <RelativeLayout
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="46dp">
                        <TextView
                            android:id="@+id/tv_choose_retip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="选择退换货"
                            android:textColor="#ff333333"
                            android:textSize="14sp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="15dp"
                            />
                        <RelativeLayout
                            android:id="@+id/rl_shop_chooseback"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_toRightOf="@+id/tv_choose_retip"
                            android:layout_marginLeft="55dp">
                            <ImageView
                                android:id="@+id/iv_shop_chooseback"
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:layout_centerVertical="true"
                                android:src="@drawable/icon_round_selected"
                                />
                            <TextView
                                android:id="@+id/tv_shop_back"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/iv_shop_chooseback"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"
                                android:text="退货"
                                android:textColor="#ff333333"
                                android:textSize="14sp"
                                />

                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/rl_shop_choosechage"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_toRightOf="@+id/rl_shop_chooseback"
                            android:layout_marginLeft="43dp">
                            <ImageView
                                android:id="@+id/iv_shop_choosechange"
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:layout_centerVertical="true"

                                android:src="@drawable/icon_round_unselect"
                                />
                            <TextView
                                android:id="@+id/tv_shop_change"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/iv_shop_choosechange"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"
                                android:text="换货"
                                android:textColor="#ff333333"
                                android:textSize="14sp"
                                />
                        </RelativeLayout>

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:id="@+id/rl_refund_reason">
                        <TextView
                            android:id="@+id/tv_reason_tip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="退货原因"
                            android:textColor="#ff333333"
                            android:textSize="14sp"
                            android:layout_marginLeft="15dp"
                            android:layout_centerVertical="true"
                            />
                        <TextView
                            android:id="@+id/tv_selected_reason"
                            android:layout_toRightOf="@+id/tv_reason_tip"
                            android:layout_toLeftOf="@+id/iv_reason"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="#ff999999"
                            android:textSize="14sp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="17dp"
                            />
                        <ImageView
                            android:id="@+id/iv_reason"
                            android:layout_width="8dp"
                            android:layout_height="13dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/icon_right_more"
                            android:layout_marginRight="15dp"
                            />
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="15dp"
                        android:background="#f8f8f8"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="46dp">
                        <TextView
                            android:id="@+id/tv_refund_tip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="退货说明："
                            android:textColor="#ff333333"
                            android:textSize="14sp"
                            android:layout_marginLeft="15dp"
                            android:layout_centerVertical="true"
                            />
                        <EditText
                            android:id="@+id/et_shoprefund_remark"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="选填"
                            android:textSize="@dimen/sp_14"
                            android:textColor="#ff999999"
                            android:background="@null"
                            android:layout_toRightOf="@+id/tv_refund_tip"/>
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="15dp"
                        android:background="#f8f8f8"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="上传凭证（最多3张）"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:textColor="#ff333333"
                        android:textSize="14sp"
                        />
                    <GridView
                        android:id="@+id/gridView_get_dog_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:listSelector="@color/transparent"
                        android:numColumns="4"
                        android:layout_marginTop="15dp"
                        android:scrollbars="none"
                        android:visibility="visible"/>
                    <TextView
                        android:id="@+id/tv_shop_refundcommit"
                        android:layout_width="311dp"
                        android:layout_height="60dp"
                        android:background="@drawable/icon_commit_yellow"
                        android:textColor="#ffffffff"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:layout_marginTop="20dp"
                        android:layout_alignParentBottom="true"
                        android:layout_gravity="center"
                        android:paddingBottom="12dp"
                        android:layout_marginBottom="60dp"
                        />
                </LinearLayout>


        </androidx.core.widget.NestedScrollView>


    </LinearLayout>

</RelativeLayout>
