<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_red_jianbian1"
    android:orientation="vertical"
    tools:context=".PetDetailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dip"
        android:paddingLeft="5dip"
        android:paddingRight="20dip">

        <ImageView
            android:id="@+id/iv_petdetail_title_back"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/white_back_top" />

        <LinearLayout
            android:id="@+id/ll_petdetail_title_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical|right"
            android:orientation="vertical">

            <ImageView
                android:layout_width="25dip"
                android:layout_height="20dip"
                android:layout_marginBottom="2dip"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/icon_petdetail_card" />

            <TextView
                android:id="@+id/tv_petdetail_cardstate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="可办犬证"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_petdetail_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_toLeftOf="@id/ll_petdetail_title_right"
            android:layout_toRightOf="@id/iv_petdetail_title_back"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:textStyle="bold"
            android:visibility="gone" />
    </RelativeLayout>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_red_jianbian1">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/abl_petdetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_red_jianbian1"
            app:elevation="0dp">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_red_jianbian1"
                app:contentScrim="@drawable/bg_red_jianbian1"
                app:layout_scrollFlags="scroll">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingRight="20dip">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="15.5dip">
d
                        <RelativeLayout
                            android:layout_width="104dip"
                            android:layout_height="104dip">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:adjustViewBounds="true"
                                android:scaleType="fitXY"
                                android:src="@drawable/bg_petdetail_circle" />

                            <ImageView
                                android:id="@+id/iv_petdetail_petimg"
                                android:layout_width="65dip"
                                android:layout_height="65dip"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="9.5dip"
                                android:adjustViewBounds="true"
                                android:scaleType="fitXY"
                                android:src="@drawable/user_icon_unnet_circle" />
                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="10dp"
                            >

                            <LinearLayout
                                android:id="@+id/ll_petdetail_petnickname"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_petdetail_petnickname"
                                    tools:text="hhhhh"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="10dip"
                                    android:textColor="@color/white"
                                    android:textSize="17sp" />

                                <ImageView
                                    android:layout_width="6dip"
                                    android:layout_height="10dip"
                                    android:adjustViewBounds="true"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/icon_petdetail_right" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_petdetail_petsex"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="10dip"
                                    android:textColor="@color/white"
                                    android:visibility="gone"
                                    tools:text="女"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/tv_petdetail_pettype"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="15dip"
                                    android:lines="1"
                                    android:ellipsize="end"
                                    tools:text="哈哈哈哈哈哈哈哈哈哈或或或哈哈哈哈哈哈哈哈哈哈或或或"
                                    android:textColor="@color/white"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/tv_petdetail_petmonth"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/white"
                                    android:visibility="gone"
                                    tools:text="生日"
                                    android:textSize="14sp" />
                            </LinearLayout>
                            <com.zhy.view.flowlayout.TagFlowLayout
                                android:id="@+id/tl_perdetail_tags"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="-12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="55.5dip">

                        <TextView
                            android:id="@+id/tv_petdetail_xznum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="洗澡：0次"
                            android:layout_marginRight="50dip"
                            android:textColor="@color/white"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_petdetail_mrnum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="50dip"
                            android:textColor="@color/white"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_petdetail_jynum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.appbar.CollapsingToolbarLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="105dip">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="77.5dip"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/bg_petdetail_top" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="@color/white">

                    <LinearLayout
                        android:id="@+id/ll_petdetail_hljl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="15dip"
                        android:paddingRight="15dip">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="34dip"
                                android:layout_height="27.5dip"
                                android:layout_marginRight="10dip"
                                android:adjustViewBounds="true"
                                android:scaleType="fitXY"
                                android:src="@drawable/icon_petdetail_hljl" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="护理记录"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:textSize="21sp" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_petdetail_hljldesc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="44dip"
                            android:textColor="@color/a717985"
                            android:textSize="12sp" />
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/srl_petdetail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_petdetail"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</LinearLayout>