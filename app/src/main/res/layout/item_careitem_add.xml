<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="26dip"
    android:layout_marginTop="30dip"
    android:layout_marginRight="15dip">

    <ImageView
        android:id="@+id/iv_addcareitem_select"
        android:layout_width="28dip"
        android:layout_height="28dip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/icon_petadd_unselect" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dip"
        android:layout_toLeftOf="@id/iv_addcareitem_select"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.haotang.pet.view.NiceImageView
            android:id="@+id/iv_addcareitem_icon"
            android:layout_width="70dip"
            android:layout_height="70dip"
            android:layout_marginRight="10dip"
            android:adjustViewBounds="true"
            android:src="@drawable/icon_production_default"
            android:scaleType="fitXY"
            app:corner_radius="25dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_addcareitem_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="@color/a333333"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_addcareitem_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="@color/a666666"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tv_addcareitem_eprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="@color/aff3a1e"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_addcareitem_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="@color/a333333"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>