<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_item_shopmallorder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/af6f8fa"
    android:orientation="vertical">
    <com.haotang.pet.view.ShadowLayout
        app:hl_shadowLimit="10dp"
        app:hl_topShow="false"
        app:hl_cornerRadius="10dp"
        app:hl_shadowColor="#7fdddddd"
        app:hl_dy="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/rl_item_shopmallorder"
                android:layout_width="match_parent"
                android:layout_height="90dip"
                android:padding="15dip">

                <ImageView
                    android:id="@+id/iv_item_shopmallorder"
                    android:layout_width="60dip"
                    android:layout_height="60dip"
                    android:layout_marginRight="10dip"
                    android:scaleType="fitXY"
                    android:src="@drawable/icon_production_default" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/iv_item_shopmallorder">

                    <TextView
                        android:id="@+id/tv_item_shopmallorder_statename"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="TextView"
                        android:textColor="@color/aD0021B"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_item_shopmallorder_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:text="TextView"
                        android:textColor="@color/a666666"
                        android:textSize="9sp" />

                    <TextView
                        android:id="@+id/tv_item_shopmallorder_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:text="TextView"
                        android:textColor="@color/aD1494F"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_above="@id/tv_item_shopmallorder_price"
                        android:layout_marginRight="10dip"
                        android:layout_toLeftOf="@id/tv_item_shopmallorder_statename">

                        <TextView
                            android:id="@+id/tv_item_shopmallorder_titletag"
                            android:layout_width="wrap_content"
                            android:layout_height="14dip"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="2dip"
                            android:background="@drawable/bg_red_all"
                            android:gravity="center_vertical"
                            android:paddingLeft="5dip"
                            android:paddingRight="5dip"
                            android:text="TextView"
                            android:textColor="@color/white"
                            android:textSize="10sp"
                            android:visibility="gone" />

                        <com.haotang.pet.view.TagTextView
                            android:id="@+id/tv_item_shopmallorder_title"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:ellipsize="end"
                            android:gravity="top"
                            android:lineSpacingExtra="4dip"
                            android:maxLines="2"
                            android:text="TextView"
                            android:textColor="@color/a333333"
                            android:textSize="12sp" />

                    </RelativeLayout>


                </RelativeLayout>
            </RelativeLayout>

            <View
                android:id="@+id/view_divide"
                android:layout_below="@+id/rl_item_shopmallorder"
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:background="@color/aEEEEEE" />

            <RelativeLayout
                android:layout_below="@+id/view_divide"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:paddingLeft="15dip"
                android:paddingRight="15dip">

                <Button
                    android:id="@+id/btn_item_shopmallorder"
                    android:layout_width="wrap_content"
                    android:layout_height="27dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/bg_redline_round"
                    android:gravity="center"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip"
                    android:text="评价"
                    android:textColor="@color/aD0021B"
                    android:textSize="14sp" />

            </RelativeLayout>
        </LinearLayout>
    </com.haotang.pet.view.ShadowLayout>



</LinearLayout>
