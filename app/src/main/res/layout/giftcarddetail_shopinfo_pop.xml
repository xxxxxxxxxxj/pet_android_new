<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_appointpetmx_bottomdia"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="2"
        android:clipChildren="false"
        android:clipToPadding="false">

        <LinearLayout
            android:id="@+id/ll_appointpetmx_bottomdia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/pet_data_setback"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24.5dp"
                android:layout_marginTop="15dip"
                android:layout_marginBottom="34.65dp">

                <ImageView
                    android:id="@+id/iv_giftcarddetail"
                    android:layout_width="140dp"
                    android:layout_height="84dp"
                    android:layout_marginTop="-30dp"
                    android:src="@drawable/icon_image_default" />

                <TextView
                    android:id="@+id/tv_giftcard_rmb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/tv_giftcarddetail_price"
                    android:layout_marginLeft="19.5dp"
                    android:layout_toRightOf="@+id/iv_giftcarddetail"
                    android:text="¥"
                    android:textColor="#FFD0021B"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tv_giftcarddetail_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv_giftcard_rmb"
                    android:text="3000.00"
                    android:layout_marginTop="8dp"
                    android:textColor="#FFD0021B"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_giftcarddetail_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/iv_giftcarddetail"
                    android:layout_marginLeft="19.5dp"
                    android:layout_toRightOf="@+id/iv_giftcarddetail"
                    android:maxLines="1"
                    android:text="库存8888张"
                    android:textColor="#FF333333"
                    android:visibility="gone"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/iv_appointpetmx_bottomdia_close"
                    android:layout_width="40dip"
                    android:layout_height="40dip"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="15dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/icon_appoint_close" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="11.5dp"
                android:text="面值"
                android:textColor="#FF333333"
                android:textSize="14sp"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rl_giftcarddetail_pricelist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="11.5dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="44dp"
                android:layout_marginBottom="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="购买数量"
                    android:textColor="#FF333333"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="99dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_giftcarddetail_jian"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/pop_giftcarddetail_notjian" />

                    <TextView
                        android:id="@+id/ed_giftcarddetail_buynum"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/bg_giftcard_buy_num"
                        android:gravity="center"
                        android:inputType="number"
                        android:text="1"
                        android:textColor="#FF333333"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/iv_giftcarddetail_add"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/pop_giftcarddetail_add" />

                </LinearLayout>
            </RelativeLayout>

            <Button
                android:id="@+id/btn_giftcarddetail_sure"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_marginLeft="42.5dp"
                android:layout_marginRight="42.5dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/bg_red_jianbian_icon"
                android:text="确定"
                android:textColor="#FFFFFFFF"
                android:textSize="15sp" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>