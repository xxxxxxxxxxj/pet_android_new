<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="150dip"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/rl_header_mycard"
        android:layout_width="match_parent"
        android:layout_height="165dip"
        android:background="@drawable/icon_card_bgshade_ban"
        android:paddingLeft="19dip"
        android:paddingTop="15dip"
        android:paddingRight="19dip"
        android:paddingBottom="23dip">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_header_mycard_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            custom:riv_corner_radius="10dip" />

        <LinearLayout
            android:id="@+id/ll_header_mycard_info"
            android:layout_width="match_parent"
            android:layout_height="95dip"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:layout_marginTop="20dip"
                android:layout_marginRight="15dip"
                android:layout_marginBottom="5dip">

                <TextView
                    android:id="@+id/tv_header_mycard_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="ï¿¥"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_header_mycard_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dip"
                    android:layout_toLeftOf="@id/tv_header_mycard_amount"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_header_mycard_dhm"
                    android:layout_width="98dip"
                    android:layout_height="25dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/icon_card_dhm" />

                <TextView
                    android:id="@+id/tv_header_mycard_discounttext"
                    android:layout_width="wrap_content"
                    android:layout_height="20dip"
                    android:layout_centerVertical="true"
                    android:paddingLeft="15dip"
                    android:paddingRight="10dip"
                    android:textColor="@color/white"
                    android:textSize="11sp" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_header_mycard_title"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_marginTop="115dip"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="20dip">

        <ImageView
            android:layout_width="26dip"
            android:layout_height="17dip"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/icon_mycard" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="110dip"
        android:layout_below="@id/ll_header_mycard_title"
        android:background="@color/transparent" />
</RelativeLayout>