<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@color/bggray"
    >
    <ImageView 
       android:id="@+id/iv_beauticianproduction_detail"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:scaleType="fitCenter"
       android:src="@drawable/icon_production_default"
       />
      <TextView 
          android:id="@+id/tv_beauticianproduction_detail"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="小可爱"
          android:textSize="16sp"
          android:textColor="@color/white"
          android:background="#55000000"
          android:layout_alignParentBottom="true"
          android:padding="10dip"
          android:layout_marginBottom="30dp"
          />
	    <LinearLayout
            android:id="@+id/layout_dianzan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#55000000"
            android:orientation="horizontal"
            android:gravity="right|center">
            <ImageView
                android:id="@+id/img_dianzan"
                android:layout_width="29dp"
                android:layout_height="29dp"
                android:background="@drawable/good"/>
            <TextView
                android:id="@+id/textview_dianzannums"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1452"
                android:layout_marginTop="1dp"
                android:textColor="@color/white"
                android:layout_marginRight="10dp"/>
        </LinearLayout>
</RelativeLayout>
