<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lLayout_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_round24"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dip"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="57.5dip"
            android:layout_height="52.5dip"
            android:layout_marginBottom="16dip"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/icon_success" />

        <TextView
            android:id="@+id/tv_defaultdialog_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="绑定成功"
            android:textColor="@color/a002241"
            android:textSize="16sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="#DFE0E2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_defaultdialog_cancel"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/a717985"
            android:textSize="15sp" />

        <View
            android:id="@+id/vw_defaultdialog"
            android:layout_width="0.5dip"
            android:layout_height="match_parent"
            android:background="#DFE0E2" />

        <TextView
            android:id="@+id/tv_defaultdialog_submit"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="我知道了"
            android:textColor="@color/aff3a1e"
            android:textSize="15sp" />
    </LinearLayout>
</LinearLayout>