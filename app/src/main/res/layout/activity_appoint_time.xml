<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/af8f8f8">

    <LinearLayout
        android:id="@+id/ll_appointtime_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/titlebar" />

        <LinearLayout
            android:id="@+id/ll_appointtime_worker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/aF8F1E8"
                android:padding="10dip">

                <TextView
                    android:id="@+id/tv_appointtime_worker_qitatime"
                    android:layout_width="102dip"
                    android:layout_height="30dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/bg_orange_jianbian_round"
                    android:gravity="center"
                    android:text="其他美容师时间"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_appointtime_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dip"
                    android:layout_toLeftOf="@id/tv_appointtime_worker_qitatime"
                    android:text="没有您想预约的时间吗，去看看其他美容师的时间吧"
                    android:textColor="@color/a333333"
                    android:textSize="12sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dip"
                android:background="@drawable/main_local_bg_shade">

                <ImageView
                    android:id="@+id/iv_appointtime_worker_tag"
                    android:layout_width="43dip"
                    android:layout_height="43dip"
                    android:layout_marginLeft="5.5dip"
                    android:layout_marginTop="6.5dip"
                    android:scaleType="fitXY"
                    android:visibility="gone" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dip">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_appointtime_worker_img"
                            android:layout_width="65dip"
                            android:layout_height="65dip"
                            android:layout_marginRight="10dip"
                            android:scaleType="fitXY"
                            android:src="@drawable/user_icon_unnet_circle" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_appointtime_workername"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dip"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:text="TextView"
                                android:textColor="@color/a333333"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dip">

                                <TextView
                                    android:id="@+id/tv_appointtime_worker_num"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="15dip"
                                    android:ellipsize="end"
                                    android:singleLine="true"
                                    android:text="TextView"
                                    android:textColor="@color/a666666"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/tv_appointtime_worker_hpl"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:singleLine="true"
                                    android:text="TextView"
                                    android:textColor="@color/a666666"
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <com.zhy.view.flowlayout.TagFlowLayout
                                android:id="@+id/tfl_appointtime_worker_listbq"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/white" />
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_appointtime_shop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dip"
                android:background="@drawable/main_local_bg_shade"
                android:orientation="horizontal"
                android:padding="15dip">

                <RelativeLayout
                    android:layout_width="64dip"
                    android:layout_height="64dip">

                    <TextView
                        android:id="@+id/tv_appointtime_shop_tag"
                        android:layout_width="43.5dip"
                        android:layout_height="15dip"
                        android:background="@drawable/shoplist_tag"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:scaleType="fitXY"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textSize="9sp" />

                    <ImageView
                        android:id="@+id/iv_appointtime_shop_img"
                        android:layout_width="64dip"
                        android:layout_height="64dip"
                        android:scaleType="fitXY"
                        android:src="@drawable/icon_production_default" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="64dip"
                    android:layout_marginLeft="10dip"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dip"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_appointtime_shopname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dip"
                            android:ellipsize="end"
                            android:maxWidth="150dip"
                            android:singleLine="true"
                            android:text="TextView"
                            android:textColor="@color/a333333"
                            android:textSize="15sp" />

                        <ImageView
                            android:id="@+id/iv_appointtime_shopphone"
                            android:layout_width="21dip"
                            android:layout_height="21dip"
                            android:scaleType="fitXY"
                            android:src="@drawable/icon_phone" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_appointtime_shopyysj"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dip"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="营业时间: "
                        android:textColor="@color/a666666"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_appointtime_shopaddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="地址: "
                        android:textColor="@color/a666666"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_appointtime_shopdesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dip"
                android:text="TextView"
                android:textColor="@color/aBB996C"
                android:textSize="12sp" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_appointtime_topriqi"
            android:layout_width="match_parent"
            android:layout_height="60dip"
            android:background="@color/white"
            android:paddingLeft="10dip" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="10dip">

            <ImageView
                android:layout_width="13.5dip"
                android:layout_height="12dip"
                android:layout_marginRight="5dip"
                android:scaleType="fitXY"
                android:src="@drawable/icon_time_car_unselect" />

            <TextView
                android:id="@+id/tv_appointtime_tishi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="表示宠物地址在门店3km范围内，并且本时间段可接送"
                android:textColor="@color/a333333"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_appointtime_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_appointtime_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="13dip"
            android:layout_marginRight="10dip"
            android:layout_marginBottom="13dip"
            android:textColor="@color/a666666"
            android:textSize="12sp" />

        <RelativeLayout
            android:id="@+id/rl_appointtime_bottom"
            android:layout_width="match_parent"
            android:layout_height="49dip"
            android:background="@color/white"
            android:paddingLeft="10dip"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_appointtime_submit"
                android:layout_width="140dip"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@drawable/bg_red_jianbian"
                android:gravity="center"
                android:text="确认"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@id/tv_appointtime_submit"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="预约时间："
                    android:textColor="@color/a333333"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_appointtime_selecttime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textColor="@color/a333333"
                    android:textSize="12sp" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/ll_appointtime_bottom"
        android:layout_below="@id/ll_appointtime_top"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_appointtime_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/af8f8f8"
                android:paddingLeft="10dip"
                android:paddingRight="10dip" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>