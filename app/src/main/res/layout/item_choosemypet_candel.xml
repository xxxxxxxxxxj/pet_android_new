<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_item_choosemypet_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_item_choosemypet_unavil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:layout_marginBottom="10dip"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <View
            android:layout_width="60dip"
            android:layout_height="0.5dip"
            android:background="@color/a36425B" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:text="不可绑定宠物"
            android:textColor="@color/a36425B"
            android:textSize="14sp" />

        <View
            android:layout_width="60dip"
            android:layout_height="0.5dip"
            android:background="@color/a36425B" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dip"
        android:layout_below="@id/ll_item_choosemypet_unavil">

        <ImageView
            android:id="@+id/iv_item_choosemypet_no"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/icon_item_choosemypet_no"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:background="@drawable/main_local_bg_shade"
            android:paddingLeft="15dip"
            android:paddingTop="7dip"
            android:paddingRight="5dip"
            android:paddingBottom="7dip">


                <RelativeLayout
                    android:id="@+id/rl_item_choosemypetinfo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/iv_item_choosemypet_select"
                        android:layout_width="28dip"
                        android:layout_height="28dip"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dip"
                        android:scaleType="fitXY"
                        android:src="@drawable/icon_petadd_unselect" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="5dip"
                        android:layout_toLeftOf="@id/iv_item_choosemypet_select"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_item_choosemypet_img"
                            android:layout_width="60dip"
                            android:layout_height="60dip"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:scaleType="fitXY"
                            android:src="@drawable/user_icon_unnet_circle" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dip"
                            android:layout_marginLeft="10dip"
                            android:layout_marginRight="10dip">

                            <LinearLayout
                                android:id="@+id/ll_item_choosemypet_pet"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_item_choosemypet_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="5dip"
                                    android:text="TextView"
                                    android:textColor="@color/black"
                                    android:textSize="15sp" />

                                <TextView
                                    android:id="@+id/tv_item_choosemypet_age"
                                    android:layout_width="wrap_content"
                                    android:layout_height="17dip"
                                    android:background="@drawable/bg_orange_round"
                                    android:ellipsize="end"
                                    android:gravity="center_vertical"
                                    android:paddingLeft="5dip"
                                    android:paddingRight="5dip"
                                    android:singleLine="true"
                                    android:text="TextView"
                                    android:textColor="@color/white"
                                    android:textSize="12sp" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/tv_item_choosemypet_desc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:text="TextView"
                                android:textColor="@color/a999999"
                                android:textSize="10sp" />

                            <TextView
                                android:id="@+id/tv_item_choosemypet_petname"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_above="@id/tv_item_choosemypet_desc"
                                android:layout_below="@id/ll_item_choosemypet_pet"
                                android:layout_centerVertical="true"
                                android:gravity="center_vertical"
                                android:text="TextView"
                                android:textColor="@color/a666666"
                                android:textSize="12sp" />
                        </RelativeLayout>
                    </LinearLayout>
                </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_item_choosemypet_del"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:paddingLeft="15dip"
        android:paddingRight="5dp"
        android:paddingTop="7dip"
        android:paddingBottom="7dip"
        android:visibility="gone"
        android:background="@drawable/bg_itemdel_balack"
        >
        <ImageView
            android:id="@+id/iv_item_choosemypet_del"
            android:layout_width="53dp"
            android:layout_height="53dp"
            android:layout_centerInParent="true"
            android:src="@drawable/icon_item_del"
            />
        
        
    </RelativeLayout>
</RelativeLayout>