<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_address_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="18dp"
        android:text="定位的当前地址名称"
        android:textColor="#ff384359"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_address_far"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_address_name"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:text="1.66km"
        android:textColor="#ff717985"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_address_loc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tv_address_far"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="15dp"
        android:layout_toLeftOf="@+id/iv_address_selected"
        android:layout_toRightOf="@+id/tv_address_far"
        android:ellipsize="end"
        android:lines="1"
        android:text="朝阳区小华业玫瑰底商123号…"
        android:textColor="#ff9fa7b9"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/iv_address_selected"
        android:layout_width="14dp"
        android:layout_height="11dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:src="@drawable/icon_address_selected" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/tv_address_loc"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:background="#E7EBEE" />
</RelativeLayout>