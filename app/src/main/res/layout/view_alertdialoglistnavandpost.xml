<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lLayout_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/alert_bg_shape"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dip"
        android:layout_marginTop="15dip"
        android:gravity="center_horizontal"
        android:text="TextView"
        android:textColor="@color/a030303"
        android:textSize="15sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/alertdialog_line" />

    <com.haotang.pet.view.MListview
        android:id="@+id/mlv_appointmentnew_pet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/list_item_divider"
        android:dividerHeight="0dip"
        android:listSelector="@drawable/mlistview_selector"
        android:scrollbars="none" />

    <ListView
        android:id="@+id/lv_appointmentnew_noshop"
        android:layout_width="match_parent"
        android:layout_height="150dip"
        android:divider="@android:color/transparent"
        android:dividerHeight="15dip"
        android:paddingLeft="15dip"
        android:paddingRight="15dip"
        android:listSelector="@drawable/mlistview_selector"
        android:paddingBottom="15dip"
        android:paddingTop="30dip"
        android:scrollbars="none" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/alertdialog_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_neg"
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:layout_weight="1"
            android:background="@drawable/alertdialog_left_selector"
            android:gravity="center"
            android:text="TextView"
            android:textColor="@color/a666666"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/img_line"
            android:layout_width="0.5dp"
            android:layout_height="43dp"
            android:background="@color/alertdialog_line" />

        <Button
            android:id="@+id/btn_pos"
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:layout_weight="1"
            android:background="@drawable/alertdialog_right_selector"
            android:gravity="center"
            android:text="TextView"
            android:textColor="@color/aD1494F"
            android:textSize="17sp" />
    </LinearLayout>

</LinearLayout>