<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_pop_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_appointpetmx_bottom_bg"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:background="@color/transparent" />

    <RelativeLayout
        android:id="@+id/rl_appointpetmx_bottomdia"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="2"
        android:background="@android:color/transparent">

        <ImageView
            android:id="@+id/iv_appointpetmx_bottom_bg_close"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent" />

        <LinearLayout
            android:id="@+id/ll_appointpetmx_bottomdia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/pet_data_setback"
            android:minHeight="300dip"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dip"
                android:layout_marginBottom="5dip"
                android:paddingLeft="10dip"
                android:paddingRight="10dip">

                <ImageView
                    android:id="@+id/iv_appointpetmx_bottomdia_close"
                    android:layout_width="35dip"
                    android:layout_height="35dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:scaleType="fitXY"
                    android:padding="@dimen/dp_10"
                    android:src="@drawable/icon_appoint_close" />

                <TextView
                    android:id="@+id/tv_appointpetmx_bottomdia_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    tools:text="选择EK"
                    android:textColor="@color/a333333"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_appointpetmx_bottomdia_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="50dip"
                android:layout_marginBottom="15dip"
                android:text=""
                android:textColor="@color/a999999"
                android:textSize="12sp"
                android:visibility="gone" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_appointpetmx_bottomdia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:scrollbars="vertical"
                android:background="@color/white" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>