<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_order_all"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:paddingBottom="0dp"
        android:background="@drawable/bg_icon_cardorderlist"
       >
        <RelativeLayout
            android:id="@+id/rl_cardorder_top"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            >

            <ImageView
                android:id="@+id/iv_item_giftcardorder"
                tools:background="@color/bt_6"
                android:layout_width="101dp"
                android:layout_height="60dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:scaleType="fitXY"
                android:layout_marginBottom="@dimen/dp_10" />

            <RelativeLayout
                android:id="@+id/rl_card_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="16.5dp"
                android:layout_toRightOf="@+id/iv_item_giftcardorder">

                <TextView
                    android:id="@+id/tv_item_cardorder_title"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@+id/tv_item_cardorder_type"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textStyle="bold"
                    android:text="宠物家三周年纪念算3卡"
                    android:textColor="#FF333333"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_item_cardorder_type"
                    android:layout_width="wrap_content"
                    android:layout_height="16.5dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:text="退款中"
                    android:textColor="@color/aff3a1e"
                    android:textSize="12sp" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_cardorder_discount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/rl_card_title"
                android:layout_marginTop="3.5dp"
                android:layout_toRightOf="@+id/iv_item_giftcardorder"
                />
            <LinearLayout
                android:id="@+id/ll_toothorder_tags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/rl_card_title"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/iv_item_giftcardorder"
                />
        </RelativeLayout>

        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="0.5dp"
            android:layout_below="@+id/rl_cardorder_top"
            android:background="@color/af1f1f1" />

        <RelativeLayout
            android:id="@+id/rl_cardorder_bottom"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@+id/line1">

            <TextView
                android:id="@+id/tv_cardorder_num"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="12.5dp"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:text="共1件商品合计:"
                android:textColor="#FF666666"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_cardorder_price"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/tv_cardorder_num"
                android:gravity="center"
                android:textColor="#FF666666"
                android:textSize="12sp" />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_alignParentRight="true"
    android:layout_centerVertical="true"
    >
    <TextView
        android:id="@+id/tv_cardorder_gotip"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_toLeftOf="@+id/tv_cardorder_gobind"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_boder_red_radius"
        android:gravity="center"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:text="查看进度"
        android:textColor="@color/aff3a1e"
        android:textSize="12sp" />
    <TextView
        android:id="@+id/tv_cardorder_gobind"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_boder_red_radius"
        android:gravity="center"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:text="立即绑定"
        android:textColor="@color/aff3a1e"
        android:visibility="visible"
        android:textSize="12sp" />

</LinearLayout>

        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>