<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lLayout_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_round20"
    android:orientation="vertical">
    <FrameLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_defaultdialog_close"
            android:layout_width="12dip"
            android:layout_height="12dip"
            android:visibility="gone"
            android:layout_gravity="right"
            android:layout_marginRight="20dip"
            android:layout_marginTop="15dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/iv_commodity_shopquanyipop_close" />
        <RelativeLayout
            android:layout_gravity="center_vertical"
            android:minHeight="112dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/tv_defaultdialog_title"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:textStyle="bold"
                android:gravity="center"
                android:visibility="visible"
                android:text="TextView"
                android:textColor="@color/a384359"
                android:textSize="17sp" />
            <TextView
                android:id="@+id/tv_defaultdialog_msg"
                android:layout_below="@+id/tv_defaultdialog_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="6dp"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:visibility="visible"
                android:gravity="center"
                tools:text="确认您要从当前账户中解绑账 确认您要从当前账确认您要从当前账"
                android:textColor="@color/a717985"
                android:textSize="14sp" />
        </RelativeLayout>



    </FrameLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="#DFE0E2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="47dip"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_defaultdialog_cancel"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/a717985"
            android:textSize="15sp" />

        <View
            android:id="@+id/vw_defaultdialog"
            android:layout_width="0.5dip"
            android:layout_height="match_parent"
            android:background="#DFE0E2" />

        <TextView
            android:id="@+id/tv_defaultdialog_submit"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="我知道了"
            android:textColor="@color/aff3a1e"
            android:textSize="15sp" />
    </LinearLayout>
</LinearLayout>