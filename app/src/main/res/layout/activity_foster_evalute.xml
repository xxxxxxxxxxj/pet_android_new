<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@+id/rl_commodity_black"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.7"
        android:background="@color/black"
        android:visibility="gone"/>
    <include
        android:id="@+id/rl_evaluate_title"
        layout="@layout/titlebar_white" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_below="@+id/rl_evaluate_title"
        >
        <com.haotang.pet.view.NiceImageView
            android:id="@+id/iv_evalute_shopicon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="15dp"
            app:corner_radius="4dp"
            />
        <TextView
            android:id="@+id/tv_evalute_shopname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_evalute_shopicon"
            android:layout_marginTop="16.5dp"
            android:layout_marginLeft="10dp"
            android:textColor="#ff333333"
            android:textStyle="bold"
            android:textSize="17sp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_evalute_shopname"
            android:gravity="center_vertical"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@+id/iv_evalute_shopicon"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageview_shop_eva_one"
                android:layout_width="33dp"
                android:layout_height="24dp"
                android:src="@drawable/star_empty"/>

            <ImageView
                android:id="@+id/imageview_shop_eva_two"
                android:layout_width="33dp"
                android:layout_height="24dp"
                android:src="@drawable/star_empty"/>

            <ImageView
                android:id="@+id/imageview_shop_eva_thr"
                android:layout_width="33dp"
                android:layout_height="24dp"
                android:src="@drawable/star_empty"/>

            <ImageView
                android:id="@+id/imageview_shop_eva_four"
                android:layout_width="33dp"
                android:layout_height="24dp"
                android:src="@drawable/star_empty"/>

            <ImageView
                android:id="@+id/imageview_shop_eva_five"
                android:layout_width="33dp"
                android:layout_height="24dp"
                android:src="@drawable/star_empty"/>
        </LinearLayout>
        <com.haotang.pet.view.FluidLayout
            android:id="@+id/fluid_shop_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_evalute_shopicon"
            android:padding="5dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fluid_shop_layout"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_gray_round_f6f8fa"
            >
            <EditText
                android:id="@+id/et_evalute_shopcontent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="15dp"
                android:textColor="#ff717985"
                android:textSize="14sp"
                />
            <GridView
                android:id="@+id/gridView_get_dog_phone_shop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:listSelector="@color/transparent"
                android:numColumns="4"
                android:scrollbars="none"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/et_evalute_shopcontent"
                android:visibility="visible"/>
        </RelativeLayout>
    </RelativeLayout>
    <com.haotang.pet.view.ShadowLayout
        android:layout_width="match_parent"
        android:layout_height="64dip"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dip"
        app:hl_cornerRadius="16dip"
        app:hl_dx="0dp"
        app:hl_dy="0dp"
        app:hl_shadowColor="@color/default_shadow_color"
        app:hl_shadowLimit="10dp">

        <Button
            android:id="@+id/btn_evalute_sure"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_red_round16"
            android:gravity="center"
            android:text="提交"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </com.haotang.pet.view.ShadowLayout>

</RelativeLayout>