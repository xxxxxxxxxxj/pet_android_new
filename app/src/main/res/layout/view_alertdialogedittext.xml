<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lLayout_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/alert_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dip"
        android:layout_marginTop="15dip"
        android:gravity="center_horizontal"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="50dip">

        <ImageView
            android:id="@+id/iv_item_shopcart_shopjian"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:background="@drawable/icon_item_shopcart_shopjian_avial_dialog"
            android:scaleType="fitXY" />

        <com.haotang.pet.view.ExtendedEditText
            android:id="@+id/et_item_shopcart_shopnum"
            android:layout_width="80dip"
            android:layout_height="40dip"
            android:background="@drawable/icon_item_shopcart_shopnumbg_dialog"
            android:gravity="center"
            android:imeOptions="actionDone"
            android:numeric="integer"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/iv_item_shopcart_shopjia"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:background="@drawable/icon_item_shopcart_shopjia_avial_dialog"
            android:scaleType="fitXY" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:background="@color/alertdialog_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_neg"
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:layout_weight="1"
            android:background="@drawable/alertdialog_left_selector"
            android:gravity="center"
            android:textColor="@color/actionsheet_blue"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/img_line"
            android:layout_width="0.5dp"
            android:layout_height="43dp"
            android:background="@color/alertdialog_line" />

        <Button
            android:id="@+id/btn_pos"
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:layout_weight="1"
            android:background="@drawable/alertdialog_right_selector"
            android:gravity="center"
            android:textColor="@color/actionsheet_blue"
            android:textSize="16sp"/>
    </LinearLayout>

</LinearLayout>