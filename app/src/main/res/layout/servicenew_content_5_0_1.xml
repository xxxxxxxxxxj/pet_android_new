<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:layout_below="@+id/banner_item_detail"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/service_card_bottom_yinying" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dip"
        android:paddingRight="10dip">

        <TextView
            android:id="@+id/textview_service_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@color/white"
            android:text=""
            android:textColor="@color/a999999"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textview_servicename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:layout_toLeftOf="@id/textview_service_count"
            android:background="@color/white"
            android:text=""
            android:textColor="@color/a333333"
            android:textSize="18sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/af8f8f8" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="81.5dp"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginRight="@dimen/margin_right"
        android:background="@color/white">

        <TextView
            android:id="@+id/textview_left_pet_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="宠物"
            android:textColor="@color/a333333" />

        <RelativeLayout
            android:id="@+id/relayoutChoosePet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/textview_left_pet_title">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView_mypet"
                android:layout_width="match_parent"
                android:layout_height="61.5dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:paddingLeft="10dp">

            </androidx.recyclerview.widget.RecyclerView>

            <LinearLayout
                android:id="@+id/layout_choose_pet"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textview_add_pet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="0dp"
                    android:text="请添加宠物"
                    android:textColor="@color/bbbbbb"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/img_choose_mypet"
                    android:layout_width="7dp"
                    android:layout_height="12dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/icon_right_more" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/layout_choose_pet_top"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:orientation="horizontal"
            android:visibility="visible">

        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/af8f8f8" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginRight="@dimen/margin_right"
        android:background="@color/white">

        <TextView
            android:id="@+id/textview_left_address_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="地址"
            android:textColor="@color/a333333" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/textview_left_address_title">

            <ImageView
                android:id="@+id/img_choose_address"
                android:layout_width="7dp"
                android:layout_height="12dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/icon_right_more" />

            <TextView
                android:id="@+id/address_detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="15dp"
                android:gravity="center_vertical|right"
                android:paddingLeft="10dp"
                android:text="请选择地址"
                android:textColor="@color/bbbbbb" />
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/af8f8f8" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginRight="@dimen/margin_right"
        android:background="@color/white">

        <TextView
            android:id="@+id/textview_left_shop_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="门店"
            android:textColor="@color/a333333" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/textview_left_shop_title">

            <ImageView
                android:id="@+id/img_choose_shop"
                android:layout_width="7dp"
                android:layout_height="12dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/icon_right_more" />

            <TextView
                android:id="@+id/shop_address_detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="15dp"
                android:gravity="center_vertical|right"
                android:paddingLeft="10dp"
                android:text="请选择门店"
                android:textColor="@color/bbbbbb" />
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/af8f8f8" />

    <LinearLayout
        android:id="@+id/ll_servicenew_banner"
        android:layout_width="match_parent"
        android:layout_height="195dip"
        android:orientation="vertical"
        android:visibility="gone">

        <com.youth.banner.Banner
            android:id="@+id/banner_servicenew_banner"
            android:layout_width="match_parent"
            android:layout_height="185dip"
            app:indicator_drawable_selected="@drawable/selected_radius" />

        <View
            android:layout_width="match_parent"
            android:layout_height="10dip"
            android:background="@color/af8f8f8" />
    </LinearLayout>

    <com.flyco.tablayout.CommonTabLayout
        android:id="@+id/mTabLayout_4"
        android:layout_width="match_parent"
        android:layout_height="44dip"
        android:background="@color/white"
        app:tl_indicator_width="55dp"
        tl:tl_divider_color="@color/transparent"
        tl:tl_divider_padding="0dp"
        tl:tl_divider_width="0dp"
        tl:tl_iconVisible="false"
        tl:tl_indicator_color="@color/aE2364A"
        tl:tl_indicator_height="3dip"
        tl:tl_indicator_margin_bottom="2dip"
        tl:tl_indicator_width_equal_title="true"
        tl:tl_tab_space_equal="true"
        tl:tl_textSelectColor="@color/black"
        tl:tl_textUnselectColor="@color/black"
        tl:tl_textsize="15sp"
        tl:tl_underline_color="@color/aEEEEEE" />

    <com.haotang.pet.view.MListview
        android:id="@+id/service_scaling_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/bggray"
        android:dividerHeight="0dip"
        android:listSelector="@android:color/transparent"
        android:scrollbars="none"
        android:visibility="gone" />

    <com.haotang.pet.view.MListview
        android:id="@+id/service_scaling_image_remind"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/bggray"
        android:dividerHeight="0dip"
        android:listSelector="@android:color/transparent"
        android:scrollbars="none" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/mListview_service_eva"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:listSelector="@color/transparent"
        android:visibility="gone" />
</LinearLayout>