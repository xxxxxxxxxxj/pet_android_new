<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ll_item_collect_ency_root"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"

        android:layout_width="match_parent"
        android:layout_height="110dip"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dip"
        android:paddingRight="10dip">

        <LinearLayout
            android:id="@+id/ll_item_collect_ency_select"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingRight="15dip"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_item_collect_ency_select"
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:src="@drawable/complaint_reason_disable" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_item_collect_ency"
            android:layout_width="match_parent"
            android:layout_height="110dip"
            android:background="@drawable/main_local_bg_shade"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="15dip"
            android:paddingTop="7dip"
            android:paddingRight="5dip"
            android:paddingBottom="7dip">

            <LinearLayout
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_item_collect_ency"
                    android:layout_width="70dip"
                    android:layout_height="70dip"
                    android:layout_marginRight="10dip"
                    android:scaleType="fitXY"
                    android:src="@drawable/icon_production_default" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dip"
                    android:layout_marginRight="10dip">

                    <RelativeLayout
                        android:id="@+id/rl_item_collect_ency"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true">

                        <TextView
                            android:id="@+id/tv_item_collect_ency_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:text="TextView"
                            android:textColor="@color/a999999"
                            android:textSize="10sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dip"
                            android:layout_toLeftOf="@id/tv_item_collect_ency_time"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/iv_item_collect_ency_userimg"
                                android:layout_width="20dip"
                                android:layout_height="20dip"
                                android:layout_marginRight="10dip"
                                android:scaleType="fitXY"
                                android:src="@drawable/user_icon_unnet_circle" />

                            <TextView
                                android:id="@+id/tv_item_collect_ency_username"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:text="TextView"
                                android:textColor="@color/a999999"
                                android:textSize="10sp" />
                        </LinearLayout>
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_item_collect_ency_txt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_above="@id/rl_item_collect_ency"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="TextView"
                        android:textColor="@color/a333333"
                        android:textSize="14sp" />

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_item_mycollect_del"
        android:layout_width="match_parent"
        android:background="@drawable/bg_itemdel_balack"
        android:layout_height="110dip"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:visibility="visible">

        <ImageView
            android:id="@+id/iv_item_mycollect_del"
            android:layout_width="53dp"
            android:layout_height="53dp"
            android:layout_centerInParent="true"
            android:src="@drawable/icon_item_del" />


    </RelativeLayout>
</RelativeLayout>
