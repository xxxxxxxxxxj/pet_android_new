<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_cashback_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff333333"
            android:textSize="18sp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="13dp"
            android:layout_marginRight="15dp"
            />
        <TextView
            android:id="@+id/tv_cashback_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/tv_cashback_num"
            android:textColor="#ff333333"
            android:textSize="16sp"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="40dp"
            android:maxLines="1"
            android:ellipsize="end"
            />
        <TextView
            android:id="@+id/tv_cashback_endtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff666666"
            android:textSize="12sp"
            android:layout_below="@+id/tv_cashback_title"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="13dp"
            />
        <TextView
            android:id="@+id/tv_cashback_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffdda548"
            android:textSize="11sp"
            android:layout_below="@+id/tv_cashback_num"
            android:layout_alignParentRight="true"
            android:layout_marginTop="4dp"
            android:layout_marginRight="15dp"
            android:visibility="gone"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#339FA7B9"
            android:layout_below="@+id/tv_cashback_endtime"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            />
    </RelativeLayout>
</RelativeLayout>