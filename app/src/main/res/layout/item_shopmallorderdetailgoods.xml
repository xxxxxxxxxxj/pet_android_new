<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_item_shopmallorderdetail_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dip">

        <ImageView
            android:id="@+id/iv_item_shopmallorderdetail_order"
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:layout_marginRight="10dip"
            android:scaleType="fitXY"
            android:src="@drawable/icon_production_default" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dip">

                <TextView
                    android:id="@+id/tv_item_shopmallorderdetail_order_titletag"
                    android:layout_width="wrap_content"
                    android:layout_height="14dip"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="2dip"
                    android:background="@drawable/bg_red_all"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dip"
                    android:paddingRight="5dip"
                    android:visibility="gone"
                    android:text="TextView"
                    android:textColor="@color/white"
                    android:textSize="10sp" />

                <com.haotang.pet.view.TagTextView
                    android:id="@+id/tv_item_shopmallorderdetail_order_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:ellipsize="end"
                    android:gravity="top"
                    android:lineSpacingExtra="4dip"
                    android:maxLines="2"
                    android:text="TextView"
                    android:textColor="@color/a333333"
                    android:textSize="12sp" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_item_shopmallorderdetail_order_gg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dip"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="TextView"
                android:textColor="@color/a666666"
                android:textSize="12sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/tv_item_shopmallorderdetail_order_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="TextView"
                    android:textColor="@color/aD1494F"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_item_shopmallorderdetail_order_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/tv_item_shopmallorderdetail_order_price"
                    android:layout_alignParentRight="true"
                    android:text="TextView"
                    android:textColor="@color/a666666"
                    android:textSize="9sp" />

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>