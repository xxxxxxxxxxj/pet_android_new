<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="27dip">

        <TextView
            android:id="@+id/tv_item_billinfodialog_info_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/a333333"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="10dip"
            android:layout_toLeftOf="@id/tv_item_billinfodialog_info_price"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_item_billinfodialog_info"
                android:layout_width="27dip"
                android:layout_height="27dip"
                android:layout_marginRight="10dip"
                android:scaleType="fitXY"
                android:src="@drawable/user_icon_unnet_circle" />

            <TextView
                android:id="@+id/tv_item_billinfodialog_info_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/a333333"
                android:textSize="14sp" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>