<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ll_adactivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_webview_toolbar"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/a3a3636">

            <LinearLayout
                android:id="@+id/ll_webview_left"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/ll_webview_back"
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/iv_back_selector"
                    android:clickable="true"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/iv_webview_back"
                        android:layout_width="24dip"
                        android:layout_height="24dip"
                        android:scaleType="fitXY"
                        android:src="@drawable/webview_back" />
                </LinearLayout>


                <View
                    android:id="@+id/view_webview_line"
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/black"></View>

                <LinearLayout
                    android:id="@+id/ll_webview_finish"
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/iv_back_selector"
                    android:clickable="true"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/iv_webview_finish"
                        android:layout_width="24dip"
                        android:layout_height="24dip"
                        android:scaleType="fitXY"
                        android:src="@drawable/webview_finish" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_webview_right"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_webview_other"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dip"
                    android:text="分享"
                    android:visibility="gone"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/iv_webview_share"
                    android:layout_width="18dip"
                    android:layout_height="18dip"
                    android:scaleType="fitXY"
                    android:visibility="gone"
                    android:src="@drawable/webview_share" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_webview_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@id/ll_webview_right"
                android:layout_toRightOf="@id/ll_webview_left"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textColor="@android:color/white"
                android:textSize="18sp" />
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_commodity_black"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.7"
        android:background="@color/black"
        android:visibility="gone"></RelativeLayout>
</RelativeLayout>
