<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="105dp">
        <com.haotang.pet.view.NiceImageView
            android:id="@+id/nv_serviceitem_bg"
            android:scaleType="fitXY"
            app:corner_radius="15dp"
            android:layout_width="164dp"
            android:layout_height="105dp" />
        <TextView
            android:id="@+id/tv_serviceitem_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="香氛精油"
            android:textColor="#ff002241"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/tv_serviceitem_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥268"
            android:textColor="#ff384359"
            android:textSize="12sp"
            android:layout_below="@+id/tv_serviceitem_name"
            android:layout_marginLeft="11dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="起"
            android:textColor="#ff384359"
            android:textSize="9sp"
            android:layout_toRightOf="@+id/tv_serviceitem_price"
            android:layout_alignBaseline="@+id/tv_serviceitem_price"
            android:layout_marginLeft="5dp"
            />
        <ImageView
            android:id="@+id/iv_serviceitem_order"
            android:layout_width="58dp"
            android:layout_height="28dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="13dp"
            />
    </RelativeLayout>

</RelativeLayout>