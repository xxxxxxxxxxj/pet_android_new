<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="#99000000"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/show_top"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:orientation="vertical"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:background="@drawable/pet_data_setback"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="10dp"
                android:text="请选择服务时间"
                android:textColor="@color/a333333"
                android:textStyle="bold"
                android:textSize="18sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgCloseChangeBeau"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/close_pop_activity"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:paddingBottom="10dp">
            <TextView
                android:id="@+id/textview_appoint_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/a333333"
                android:textSize="14sp"
                android:layout_marginLeft="@dimen/margin_left"
                android:text=" "/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/beau_list"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginLeft="@dimen/margin_left"
                android:visibility="gone">

            </androidx.recyclerview.widget.RecyclerView>
            <LinearLayout
                android:id="@+id/layout_check_old_beau_is_appoint"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="visible">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center">
                    <RelativeLayout
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_marginBottom="10dp">
                        <ImageView
                            android:id="@+id/img_beau_icon"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:background="@drawable/icon_default"/>
                        <ImageView
                            android:id="@+id/img_can_choose"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/icon_petadd_select"/>
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/textview_beau_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/a333333"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:text="美容师姓名"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/a333333"
                            android:textSize="14sp"
                            android:text="原预约时间："/>
                        <TextView
                            android:id="@+id/textview_old_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2018-07-30  10：10"
                            android:textColor="@color/a333333"
                            android:textSize="14sp"
                            android:layout_marginTop="5dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="修改时间："
                            android:layout_marginTop="-10dp"
                            android:textColor="@color/a333333"
                            android:textSize="14sp"
                            android:layout_marginBottom="5dp"/>
                        <TextView
                            android:id="@+id/textview_change_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/a333333"
                            android:textSize="14sp"
                            android:text="2018-07-30  10：10"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/change_beau_left"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="选择其他美容师"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:background="@drawable/no_corners_jianbian_huangse"/>

            <TextView
                android:id="@+id/change_beau_right"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="确认修改"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:background="@drawable/no_corners_jianbian"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>