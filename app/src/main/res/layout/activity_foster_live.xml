<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_fosterlive_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <com.example.playerlibrary.AlivcLiveRoom.AliyunVodPlayerView
        android:id="@+id/alivc_fosterlive"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </com.example.playerlibrary.AlivcLiveRoom.AliyunVodPlayerView>

    <LinearLayout
        android:id="@+id/ll_fosterlive_title"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@color/transparent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">

        <RelativeLayout
            android:id="@+id/rl_fosterlive_back"
            android:layout_width="50dip"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="12.5dip"
                android:layout_height="21dip"
                android:layout_centerInParent="true"
                android:src="@drawable/iv_live_fostercare_fullscreenback" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_fosterlive_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="寄养直播"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_fosterlive_default"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:alpha="0.6"
        android:background="@color/black"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_fosterlive_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dip"
            android:text="直播君出状况了,小主待会再来吧~"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/ll_fosterlive_nonet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dip"
                android:text="现在没有wifi,再看要花流量费了"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_fosterlive_jxgk"
                android:layout_width="150dip"
                android:layout_height="44dip"
                android:background="@drawable/btn_live_fostercare_selector"
                android:text="继续观看"
                android:textColor="@color/orange"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>