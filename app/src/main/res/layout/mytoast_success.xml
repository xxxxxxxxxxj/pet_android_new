<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:id="@+id/rl"
        android:background="@color/bt_5"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140dip"
            android:layout_centerInParent="true"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/bg_white_round10"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="57.5dip"
                android:layout_height="52.5dip"
                android:layout_centerInParent="true"
                android:layout_marginBottom="13dip"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/icon_toast_success" />

            <TextView
                android:id="@+id/tv_toast_success_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="@color/a002241"
                android:textSize="16sp" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>