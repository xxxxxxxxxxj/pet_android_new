<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:background="@color/white">
    <include layout="@layout/titlebar"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginRight="@dimen/margin_right">

        <ImageView
            android:id="@+id/sriv_beauticiandetail_beautician"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:background="@drawable/icon_default"
            android:scaleType="fitXY"/>

        <LinearLayout
            android:id="@+id/layout_beau_icon_left"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@+id/sriv_beauticiandetail_beautician"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_beauticiandetail_beauticianname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="姓名"
                        android:textColor="@color/a333333"
                        android:textSize="20sp"/>

                    <LinearLayout
                        android:id="@+id/layout_next_level"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="50dp"
                            android:gravity="bottom">

                            <TextView
                                android:id="@+id/textview_become_beau_level"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_left_right_yuan_bb996c"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:text="准备升级"
                                android:textColor="@color/white"
                                android:textSize="10sp"
                                android:visibility="gone"/>
                        </LinearLayout>

                        <ImageView
                            android:layout_width="8dp"
                            android:layout_height="4dp"
                            android:layout_marginLeft="60dp"
                            android:background="@drawable/bottom_jiantou"
                            android:visibility="gone"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/texview_is_home_or_shop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" "
                        android:textColor="@color/a333333"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/texview_beau_level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="美容师级别"
                        android:textColor="@color/a333333"
                        android:textSize="14sp"
                        android:visibility="gone"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/relayout_inside_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text=""
                    android:textColor="@color/a999999"
                    android:textSize="13sp"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/af8f8f8"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="简介"
        android:textSize="18sp"
        android:gravity="center_vertical"
        android:textColor="@color/a333333"
        android:layout_marginLeft="@dimen/margin_left"/>
    <TextView
        android:id="@+id/textview_intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/margin_left"
        android:paddingRight="@dimen/margin_right"
        android:textColor="@color/a666666"
        android:textSize="13sp"
        android:text="介绍"/>
</LinearLayout>