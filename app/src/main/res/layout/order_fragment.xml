<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <com.flyco.tablayout.CommonTabLayout
        android:id="@+id/mTabLayout_orderfrag"
        android:layout_width="match_parent"
        android:layout_height="44dip"
        android:background="@color/white"
        android:layout_marginTop="25dip"
        tl:tl_divider_color="@color/transparent"
        tl:tl_divider_padding="13dp"
        tl:tl_tab_width="75dp"
        tl:tl_divider_width="0dp"
        tl:tl_iconVisible="false"
        tl:tl_indicator_color="@color/aE2364A"
        tl:tl_indicator_height="6dip"
        tl:tl_indicator_margin_bottom="2dip"
        tl:tl_indicator_width="44dp"
        tl:tl_indicator_width_equal_title="true"
        tl:tl_tab_space_equal="false"
        tl:tl_textBold="SELECT"
        tl:tl_textSelectColor="@color/a002241"
        tl:tl_textUnselectColor="@color/a9fa7b9"
        tl:tl_textsize="17sp"
        tl:tl_underline_color="@color/transparent"
        tl:tl_underline_height="0dp" />
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </androidx.viewpager.widget.ViewPager>
</LinearLayout>