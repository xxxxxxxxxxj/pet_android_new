<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_item_fosterroom_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dip">

    <RelativeLayout
        android:id="@+id/rl_item_fosterroom_img"
        android:layout_width="100dip"
        android:layout_height="78dip"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/iv_fosterroom_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/icon_production_default" />

        <TextView
            android:id="@+id/tv_fosterroom_tag"
            android:layout_width="wrap_content"
            android:layout_height="17dip"
            android:background="@drawable/bg_fosterroom_tip"
            android:ellipsize="end"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:singleLine="true"
            android:text="TextView"
            android:textColor="@color/white"
            android:textSize="10sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_item_fosterroom_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/rl_item_fosterroom_img"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rl_item_fosterroom_submit"
                android:layout_width="78dp"
                android:layout_height="39.5dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="13dp"
                android:layout_centerInParent="true"
                android:background="@drawable/bg_redround_order"
                android:paddingLeft="2dp"
                android:paddingTop="1.5dp"
                android:paddingRight="2dp"
                android:paddingBottom="5dp">

                <TextView
                    android:id="@+id/tv_item_fosterroom_submit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                   android:layout_centerInParent="true"
                    android:text="预订"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:paddingBottom="5dp"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/rl_item_fosterroom_submit"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_item_fosterroom_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:text="TextView"
                    android:textColor="@color/a333333"
                    android:textSize="16sp" />

                <com.zhy.view.flowlayout.TagFlowLayout
                    android:id="@+id/tfl_item_fosterroom_tag"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="5dip" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_item_fosterroom_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TextView"
                        android:textColor="@color/a333333"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dip"
                        android:text=" /天"
                        android:textColor="@color/a333333"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_item_fosterroom_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:text="TextView"
            android:textColor="@color/a333333"
            android:textSize="13sp" />
    </LinearLayout>
</RelativeLayout>