<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#99000000"
              android:orientation="vertical"
    android:gravity="center">
    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="140dp"
        android:orientation="vertical"
        android:gravity="right"
        android:background="@drawable/bg_white_borderbbbbbb">
        <ImageView
            android:id="@+id/imgClose"
            android:layout_width="24.5dp"
            android:layout_height="24.5dp"
            android:background="@drawable/update_order_close"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <TextView
                android:id="@+id/textViewNotice"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="您有升级订单等待支付"
                android:textSize="17sp"
                android:gravity="center"
                android:textColor="#030303"/>
            <LinearLayout
                android:id="@+id/layoutToPay"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_left_right_banyuan_jianbian"
                    android:gravity="center"
                    android:textSize="17sp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:textColor="@color/white"
                    android:text="去支付"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>