<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/af8f8f8"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dip"
        android:layout_marginBottom="12dip"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="15dip"
        android:paddingTop="20dip"
        android:paddingRight="15dip"
        android:paddingBottom="12dip">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="22dip"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="2dip"
                android:layout_height="12dip"
                android:layout_marginRight="10dip"
                android:background="@drawable/bg_ff31_round" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="寄养宠物"
                android:textColor="@color/a333333"
                android:textSize="18sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="56dip"
            android:layout_marginBottom="12dip">

            <TextView
                android:id="@+id/tv_fosterorderconfirm_roomprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                
                android:textColor="@color/a333333"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dip"
                android:layout_toLeftOf="@id/tv_fosterorderconfirm_roomprice"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_fosterorderconfirm_roomtype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dip"
                    
                    android:textColor="@color/a666666"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_fosterorderconfirm_roomdj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    
                    android:textColor="@color/a666666"
                    android:textSize="14sp" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:layout_marginLeft="56dip"
            android:layout_marginBottom="20dip"
            android:background="@color/aEEEEEE" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_fosterorderconfirm_pet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </androidx.recyclerview.widget.RecyclerView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_fosterorderconfirm_lxr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="23dip">

            <LinearLayout
                android:id="@+id/ll_fosterorderconfirm_lxrtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dip"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dip"
                    android:text="联系人"
                    android:textColor="@color/a666666"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(必填)"
                    android:textColor="@color/aff3a1e"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/ll_fosterorderconfirm_lxrtitle"
                android:gravity="center_vertical|right"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_fosterorderconfirm_lxr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dip"
                    android:ellipsize="end"
                    android:hint="未填写联系人信息"
                    android:gravity="center_vertical|right"
                    android:singleLine="true"
                    android:textColor="@color/a666666"
                    android:textColorHint="@color/aBBBBBB"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="7dip"
                    android:layout_height="11.5dip"
                    android:scaleType="fitXY"
                    android:src="@drawable/icon_right_more" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_fosterorderconfirm_remark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_fosterorderconfirm_remarktitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dip"
                android:text="订单备注"
                android:textColor="@color/a666666"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_fosterorderconfirm_remarktitle"
                android:gravity="center_vertical|right"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_fosterorderconfirm_remark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dip"
                    android:ellipsize="end"
                    android:hint="未填写备注信息"
                    android:singleLine="true"
                    android:gravity="center_vertical|right"
                    android:textColor="@color/a666666"
                    android:textColorHint="@color/aBBBBBB"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="7dip"
                    android:layout_height="11.5dip"
                    android:scaleType="fitXY"
                    android:src="@drawable/icon_right_more" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="15dip"
        android:paddingTop="20dip"
        android:paddingRight="15dip"
        android:paddingBottom="15dip">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="22dip"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="2dip"
                android:layout_height="12dip"
                android:layout_marginRight="10dip"
                android:background="@drawable/bg_007aff_round" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付方式"
                android:textColor="@color/a333333"
                android:textSize="18sp" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_fosterorderconfirm_lpk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginBottom="24dip">

            <TextView
                android:id="@+id/tv_fosterorderconfirm_lpktitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dip"
                android:text="E卡"
                android:textColor="@color/a666666"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_fosterorderconfirm_lpktitle"
                android:gravity="center_vertical|right"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_fosterorderconfirm_lpk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dip"
                    android:text="选择E卡"
                    android:textColor="@color/a666666"
                    android:textSize="12sp" />

                <ImageView
                    android:layout_width="7dip"
                    android:layout_height="11.5dip"
                    android:scaleType="fitXY"
                    android:src="@drawable/icon_right_more" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_fosterorderconfirm_yhq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginBottom="28.5dip">

            <TextView
                android:id="@+id/tv_fosterorderconfirm_yhqtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dip"
                android:text="优惠券"
                android:textColor="@color/a666666"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_fosterorderconfirm_yhqtitle"
                android:gravity="center_vertical|right"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_fosterorderconfirm_yhq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dip"
                    android:text="选择优惠券"
                    android:textColor="@color/a666666"
                    android:textSize="12sp" />

                <ImageView
                    android:layout_width="7dip"
                    android:layout_height="11.5dip"
                    android:scaleType="fitXY"
                    android:src="@drawable/icon_right_more" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginBottom="5dip">

            <TextView
                android:id="@+id/tv_fosterorderconfirm_totalprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                
                android:textColor="@color/a333333"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="订单总金额"
                android:textColor="@color/a333333"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_fosterorderconfirm_discount"
                android:layout_marginLeft="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </androidx.recyclerview.widget.RecyclerView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_fosterorderconfirm_card"
            android:layout_width="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_fosterorderconfirm_cardprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/a333333"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_fosterorderconfirm_cardname_pay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/tv_fosterorderconfirm_cardprice"
                android:text="支付"
                android:textColor="@color/a666666"
                android:textSize="12sp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_fosterorderconfirm_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dip"
        android:paddingTop="15dip"
        android:paddingRight="15dip"
        android:paddingBottom="23dip">

        <LinearLayout
            android:id="@+id/ll_fosterorderconfirm_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dip"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_fosterorderconfirm_select"
                android:layout_width="28dip"
                android:layout_height="28dip"
                android:scaleType="fitXY"
                android:src="@drawable/icon_petadd_unselect" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我同意"
                android:textColor="@color/a384359"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_fosterorderconfirm_xy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《宠物家寄养服务协议》"
            android:textColor="@color/aff3a1e"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>