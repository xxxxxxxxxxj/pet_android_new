<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/af8f8f8"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_appointtime_time1"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dip"
            android:layout_weight="1"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_appointtime_time1"
                android:layout_width="match_parent"
                android:layout_height="30dip"
                android:layout_weight="1"
                android:background="@drawable/bg_ffbdb7_border">

                <ImageView
                    android:id="@+id/iv_appointtime_time1"
                    android:layout_width="8.5dip"
                    android:layout_height="5dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dip"
                    android:scaleType="fitXY"
                    android:src="@drawable/icon_time_down" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@id/iv_appointtime_time1"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/iv_appointtime_time1_js"
                        android:layout_width="13.5dip"
                        android:layout_height="12dip"
                        android:layout_marginRight="5dip"
                        android:scaleType="fitXY"
                        android:src="@drawable/icon_time_car_unselect"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_appointtime_time1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TextView"
                        android:textColor="@color/aD0021B"
                        android:textSize="13sp" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_appointtime_time2"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dip"
            android:layout_weight="1"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_appointtime_time2"
                android:layout_width="match_parent"
                android:layout_height="30dip"
                android:layout_weight="1"
                android:background="@drawable/bg_ffbdb7_border">

                <ImageView
                    android:id="@+id/iv_appointtime_time2"
                    android:layout_width="8.5dip"
                    android:layout_height="5dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dip"
                    android:scaleType="fitXY"
                    android:src="@drawable/icon_time_down" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@id/iv_appointtime_time2"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/iv_appointtime_time2_js"
                        android:layout_width="13.5dip"
                        android:layout_height="12dip"
                        android:layout_marginRight="5dip"
                        android:scaleType="fitXY"
                        android:src="@drawable/icon_time_car_unselect"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_appointtime_time2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TextView"
                        android:textColor="@color/aD0021B"
                        android:textSize="13sp" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_appointtime_time3"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dip"
            android:layout_weight="1"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_appointtime_time3"
                android:layout_width="match_parent"
                android:layout_height="30dip"
                android:layout_weight="1"
                android:background="@drawable/bg_ffbdb7_border">

                <ImageView
                    android:id="@+id/iv_appointtime_time3"
                    android:layout_width="8.5dip"
                    android:layout_height="5dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dip"
                    android:scaleType="fitXY"
                    android:src="@drawable/icon_time_down" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@id/iv_appointtime_time3"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/iv_appointtime_time3_js"
                        android:layout_width="13.5dip"
                        android:layout_height="12dip"
                        android:layout_marginRight="5dip"
                        android:scaleType="fitXY"
                        android:src="@drawable/icon_time_car_unselect"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_appointtime_time3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TextView"
                        android:textColor="@color/aD0021B"
                        android:textSize="13sp" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_appointtime_time4"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_appointtime_time4"
                android:layout_width="match_parent"
                android:layout_height="30dip"
                android:layout_weight="1"
                android:background="@drawable/bg_ffbdb7_border">

                <ImageView
                    android:id="@+id/iv_appointtime_time4"
                    android:layout_width="8.5dip"
                    android:layout_height="5dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dip"
                    android:scaleType="fitXY"
                    android:src="@drawable/icon_time_down" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toLeftOf="@id/iv_appointtime_time4"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/iv_appointtime_time4_js"
                        android:layout_width="13.5dip"
                        android:layout_height="12dip"
                        android:layout_marginRight="5dip"
                        android:scaleType="fitXY"
                        android:src="@drawable/icon_time_car_unselect"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_appointtime_time4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="TextView"
                        android:textColor="@color/aD0021B"
                        android:textSize="13sp" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip">

        <LinearLayout
            android:id="@+id/ll_item_appointtime_jianer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/iv_appointtime_time1_jianer"
                    android:layout_width="15dip"
                    android:layout_height="15dip"
                    android:scaleType="fitXY"
                    android:src="@drawable/time_jianer_icon"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/iv_appointtime_time2_jianer"
                    android:layout_width="15dip"
                    android:layout_height="15dip"
                    android:scaleType="fitXY"
                    android:src="@drawable/time_jianer_icon"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/iv_appointtime_time3_jianer"
                    android:layout_width="15dip"
                    android:layout_height="15dip"
                    android:scaleType="fitXY"
                    android:src="@drawable/time_jianer_icon"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/iv_appointtime_time4_jianer"
                    android:layout_width="15dip"
                    android:layout_height="15dip"
                    android:scaleType="fitXY"
                    android:src="@drawable/time_jianer_icon"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_appointtime_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dip"
            android:background="@drawable/bg_time"
            android:paddingLeft="10dip"
            android:paddingTop="10dip"
            android:visibility="visible" />
    </RelativeLayout>
</LinearLayout>