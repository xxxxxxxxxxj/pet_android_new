<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_toothcard_useitem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="12dp"
        android:textColor="#333333" />

    <TextView
        android:id="@+id/tv_toothcard_usedata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_toothcard_useitem"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:text="2020-02-19  14:50"
        android:layout_marginBottom="17.5dp"
        android:textColor="#ff666666"
        android:textSize="12sp" />
    <TextView
        android:id="@+id/tv_toothcard_uesprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ff333333"
        android:layout_alignParentRight="true"
        android:layout_marginTop="22dp"
        android:layout_marginRight="15dp"
        android:textSize="14sp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/tv_toothcard_usedata"
        android:background="#339fa7b9"
        />
</RelativeLayout>