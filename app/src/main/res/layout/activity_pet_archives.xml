<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/titlebar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_petarchives_img"
                android:layout_width="60dip"
                android:layout_height="60dip"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dip"
                android:layout_marginTop="15dip"
                android:scaleType="fitXY"
                android:src="@drawable/user_icon_unnet_circle" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_petarchives_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dip"
                    android:text="TextView"
                    android:textColor="@color/a333333"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/iv_petarchives_sex"
                    android:layout_width="14dip"
                    android:layout_height="12dip"
                    android:scaleType="fitXY"
                    android:src="@drawable/pet_archives_nan" />

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_petarchives_tag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white" />

            <RelativeLayout
                android:id="@+id/rl_petarchives_riji"
                android:layout_width="match_parent"
                android:layout_height="60dip"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:background="@drawable/main_local_bg_shade"
                android:paddingLeft="15dip"
                android:paddingRight="15dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="护理记录"
                    android:textStyle="bold"
                    android:textColor="@color/a333333"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/iv_petinfodetail_dj"
                    android:layout_width="21dip"
                    android:layout_height="47dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_selecttime_arrowright" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_petarchives_petcard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:background="@drawable/main_local_bg_shade"
                android:orientation="vertical"
                android:paddingLeft="15dip"
                android:paddingRight="15dip">

                <RelativeLayout
                    android:id="@+id/rl_petarchives_petcard"
                    android:layout_width="match_parent"
                    android:layout_height="60dip">

                    <LinearLayout
                        android:id="@+id/ll_petarchives_petcard_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_petarchives_petcard"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="GO"
                            android:textColor="@color/aBB996C"
                            android:textSize="14sp" />

                        <ImageView
                            android:layout_width="21dip"
                            android:layout_height="47dip"
                            android:src="@drawable/icon_selecttime_arrowright" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dip"
                        android:layout_toLeftOf="@id/ll_petarchives_petcard_right"
                        android:text="犬证办理"
                        android:textStyle="bold"
                        android:textColor="@color/a333333"
                        android:textSize="18sp" />
                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_petarchives_card_reason"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_petarchives_fw"
                android:layout_width="match_parent"
                android:layout_height="85dip"
                android:layout_marginBottom="15dip"
                android:layout_marginTop="15dip"
                android:background="@color/white"
                android:paddingLeft="10dip"
                android:paddingRight="10dip" />

            <RelativeLayout
                android:id="@+id/rl_petarchives_zpq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dip"
                android:paddingRight="5dip">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="更多"
                        android:textColor="@color/a666666"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="21dip"
                        android:layout_height="47dip"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/icon_selecttime_arrowright" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="照片墙"
                    android:textStyle="bold"
                    android:textColor="@color/a333333"
                    android:textSize="18sp" />
            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_petarchives_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>