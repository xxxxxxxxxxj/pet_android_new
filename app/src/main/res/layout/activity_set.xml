<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include layout="@layout/titlebar_white"/>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:fillViewport="true"
        android:layout_marginTop="54dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/rl_set_zh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dip"
                    android:layout_marginRight="20dip"
                    android:layout_marginBottom="20dip"
                    android:textStyle="bold"
                    android:text="账户绑定与设置"
                    android:textColor="#002241"
                    android:textSize="20sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dip"
                    android:layout_marginRight="20dip"
                    android:layout_marginBottom="21.5dip"
                    android:text="账号及绑定"
                    android:textColor="@color/a9fa7b9"
                    android:textSize="14sp" />

                <RelativeLayout
                    android:id="@+id/rl_set_cellphone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="14.5dip"
                    android:paddingLeft="20dip"
                    android:paddingRight="20dip">

                    <LinearLayout
                        android:id="@+id/ll_set_cellphone_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical|right"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dip"
                            android:text="更改"
                            android:textColor="@color/a080808"
                            android:textSize="14sp" />

                        <ImageView
                            android:layout_width="7dip"
                            android:layout_height="11.5dip"
                            android:scaleType="fitXY"
                            android:src="@drawable/icon_right_more" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dip"
                        android:layout_toLeftOf="@id/ll_set_cellphone_right"
                        android:gravity="center_vertical|left"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_set_phone_qh"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dip"
                            android:text="TextView"
                            android:textColor="@color/a080808"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tv_set_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TextView"
                            android:textColor="@color/a080808"
                            android:textSize="14sp" />
                    </LinearLayout>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dip"
                    android:layout_marginLeft="20dip"
                    android:layout_marginBottom="14.5dip"
                    android:background="@color/aEEEEEE" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="14.5dip"
                    android:paddingLeft="20dip"
                    android:paddingRight="20dip">

                    <TextView
                        android:id="@+id/tv_set_wxcz"
                        android:layout_width="44dip"
                        android:layout_height="20dip"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/bg_9fa7b9_round"
                        android:gravity="center"
                        android:text="解绑"
                        android:textColor="@color/a002241"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dip"
                        android:layout_toLeftOf="@id/tv_set_wxcz"
                        android:gravity="center_vertical|left"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="27dip"
                            android:layout_height="22dip"
                            android:layout_marginRight="10dip"
                            android:adjustViewBounds="true"
                            android:scaleType="fitXY"
                            android:src="@drawable/icon_set_wx" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dip"
                            android:text="微信"
                            android:textColor="@color/a5c5f72"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_set_wxname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TextView"
                            android:textColor="@color/a080808"
                            android:textSize="14sp" />
                    </LinearLayout>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dip"
                    android:layout_marginLeft="20dip"
                    android:layout_marginBottom="26.5dip"
                    android:background="@color/aEEEEEE" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:layout_marginBottom="21.5dip"
                android:text="支付"
                android:textColor="@color/a9fa7b9"
                android:textSize="14sp" />

            <RelativeLayout
                android:id="@+id/rl_set_mm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14.5dip"
                android:paddingLeft="20dip"
                android:paddingRight="20dip">

                <LinearLayout
                    android:id="@+id/ll_set_mm_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical|right"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dip"
                        android:text=""
                        android:textColor="@color/a080808"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="7dip"
                        android:layout_height="11.5dip"
                        android:scaleType="fitXY"
                        android:src="@drawable/icon_right_more" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dip"
                    android:layout_toLeftOf="@id/ll_set_mm_right"
                    android:gravity="center_vertical|left"
                    android:text="支付密码"
                    android:textColor="@color/a080808"
                    android:textSize="16sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:layout_marginLeft="20dip"
                android:layout_marginBottom="14.5dip"
                android:background="@color/aEEEEEE" />

            <LinearLayout
                android:id="@+id/ll_set_zw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="14.5dip"
                    android:paddingLeft="20dip"
                    android:paddingRight="20dip">

                    <LinearLayout
                        android:id="@+id/ll_set_zw_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical|right"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_set_zwopen"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dip"
                            android:text="未开启"
                            android:textColor="@color/a080808"
                            android:textSize="14sp" />

                        <ImageView
                            android:layout_width="7dip"
                            android:layout_height="11.5dip"
                            android:scaleType="fitXY"
                            android:src="@drawable/icon_right_more" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dip"
                        android:layout_toLeftOf="@id/ll_set_zw_right"
                        android:gravity="center_vertical|left"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="指纹支付"
                            android:textColor="@color/a080808"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="开启后，支付时可适用该功能快速完成支付"
                            android:textColor="@color/a9fa7b9"
                            android:textSize="12sp" />

                    </LinearLayout>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dip"
                    android:layout_marginLeft="20dip"
                    android:layout_marginBottom="14.5dip"
                    android:background="@color/aEEEEEE" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_set_per"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14.5dip"
                android:paddingLeft="20dip"
                android:paddingRight="20dip">

                <ImageView
                    android:id="@+id/iv_set_per"
                    android:layout_width="7dip"
                    android:layout_height="11.5dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/icon_right_more" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dip"
                    android:layout_toLeftOf="@id/iv_set_per"
                    android:gravity="center_vertical|left"
                    android:text="系统权限设置"
                    android:textColor="@color/a080808"
                    android:textSize="16sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:layout_marginLeft="20dip"
                android:layout_marginBottom="14.5dip"
                android:background="@color/aEEEEEE" />

            <RelativeLayout
                android:id="@+id/rl_set_clear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14.5dip"
                android:paddingLeft="20dip"
                android:paddingRight="20dip">

                <LinearLayout
                    android:id="@+id/ll_set_clear_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical|right"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_set_cache"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dip"
                        android:text="0k"
                        android:textColor="@color/a080808"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="7dip"
                        android:layout_height="11.5dip"
                        android:scaleType="fitXY"
                        android:src="@drawable/icon_right_more" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dip"
                    android:layout_toLeftOf="@id/ll_set_clear_right"
                    android:gravity="center_vertical|left"
                    android:text="清理缓存"
                    android:textColor="@color/a080808"
                    android:textSize="16sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:layout_marginLeft="20dip"
                android:layout_marginBottom="14.5dip"
                android:background="@color/aEEEEEE" />

            <RelativeLayout
                android:id="@+id/rl_set_about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14.5dip"
                android:paddingLeft="20dip"
                android:paddingRight="20dip">

                <LinearLayout
                    android:id="@+id/ll_set_about_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical|right"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_set_about_version"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dip"
                        android:text="TextView"
                        android:textColor="@color/a080808"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="7dip"
                        android:layout_height="11.5dip"
                        android:scaleType="fitXY"
                        android:src="@drawable/icon_right_more" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dip"
                    android:layout_toLeftOf="@id/ll_set_about_right"
                    android:gravity="center_vertical|left"
                    android:text="关于"
                    android:textColor="@color/a080808"
                    android:textSize="16sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dip"
                android:layout_marginLeft="20dip"
                android:layout_marginBottom="32dip"
                android:background="@color/aEEEEEE" />

            <TextView
                android:id="@+id/tv_set_exit"
                android:layout_width="match_parent"
                android:layout_height="44dip"
                android:layout_marginLeft="40dip"
                android:layout_marginRight="40dip"
                android:layout_marginBottom="30dp"
                android:background="@drawable/bg_f0f5f9_round16"
                android:gravity="center"
                android:text="退出登录"
                android:textColor="@color/aff3a1e"
                android:textSize="15sp" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>