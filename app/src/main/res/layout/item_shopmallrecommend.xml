<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:id="@+id/vw_item_shopmallrecommend"
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="@android:color/transparent"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/rl_item_shopmallrecommend_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rl_top_right_selector"
        android:paddingTop="3dip"
        android:paddingRight="3dip"
        android:paddingBottom="15dip">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@color/white"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_item_shopmallrecommend"
                android:layout_width="match_parent"
                android:layout_height="180dip"
                android:scaleType="fitXY"
                android:src="@drawable/icon_production_default" />

            <TextView
                android:id="@+id/tv_item_shopmallrecommend_title"
                android:layout_width="match_parent"
                android:layout_height="30dip"
                android:layout_marginTop="10dip"
                android:ellipsize="end"
                android:maxLines="2"
                android:paddingLeft="15dip"
                android:paddingRight="15dip"
                android:text="TextView"
                android:textColor="@color/a666666"
                android:textSize="11sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:gravity="center_vertical"
                android:paddingLeft="15dip"
                android:paddingRight="15dip">

                <TextView
                    android:id="@+id/tv_item_shopmallrecommend_xianjia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:layout_marginRight="6dip"
                    android:textColor="@color/aD1494F"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textvie_price1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Â¥0"
                    android:textColor="@color/a666666"
                    android:textSize="9sp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
